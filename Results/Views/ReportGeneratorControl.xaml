<UserControl
    x:Class="LabelVal.Results.Views.ReportGenerationControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelVal.Results.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:viewModels="clr-namespace:LabelVal.Results.ViewModels"
    d:DesignHeight="200"
    d:DesignWidth="400"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <viewModels:ReportGenerationViewModel />
    </UserControl.DataContext>
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock
                Margin="0,0,0,20"
                Text="Click the button to generate the Excel comparison report."
                TextAlignment="Center"
                TextWrapping="Wrap" />
            <Button
                Width="150"
                Height="40"
                Command="{Binding GenerateReportCommand}"
                Content="Generate Report" />
        </StackPanel>
    </Grid>
</UserControl>