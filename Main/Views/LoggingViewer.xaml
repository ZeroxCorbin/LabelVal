<UserControl
    x:Class="LabelVal.Main.Views.LoggingViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Main.Views"
    xmlns:logging="clr-namespace:Logging.lib;assembly=Logging.lib"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:vm="clr-namespace:LabelVal.Main.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:LoggingStatusBarVm,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <CollectionViewSource x:Key="LoggerMessages" Source="{Binding LoggerMessages}">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription Direction="Descending" PropertyName="TimeStamp" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <DockPanel>
        <DataGrid
            x:Name="dataGrid"
            MaxHeight="400"
            AutoGenerateColumns="False"
            CanUserSortColumns="True"
            DockPanel.Dock="Top"
            ItemsSource="{Binding Source={StaticResource LoggerMessages}}"
            PreviewMouseDoubleClick="dataGrid_PreviewMouseDoubleClick"
            SelectionUnit="FullRow">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Binding="{Binding TimeStamp, Mode=OneWay}"
                    Header="Timestamp"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding Message, Mode=OneWay}"
                    Header="Message"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding Type, Mode=OneWay}"
                    Header="Type"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding MemberName, Mode=OneWay}"
                    Header="Member Name"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding LineNumber, Mode=OneWay}"
                    Header="Line #"
                    IsReadOnly="True" />
                <DataGridCheckBoxColumn
                    Binding="{Binding HasException, Mode=OneWay}"
                    Header="Has Exception"
                    IsReadOnly="True" />
                <DataGridTextColumn
                    Binding="{Binding SourceFilePath, Mode=OneWay}"
                    Header="File"
                    IsReadOnly="True" />
            </DataGrid.Columns>
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasException}" Value="True">
                            <Setter Property="Foreground" Value="Red" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="{x:Static logging:LoggerMessageTypes.Debug}">
                            <Setter Property="Foreground" Value="Gray" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Type}" Value="{x:Static logging:LoggerMessageTypes.Warning}">
                            <Setter Property="Foreground" Value="Yellow" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
        </DataGrid>


        <StatusBar DockPanel.Dock="Bottom">

            <StatusBarItem>
                <Button Command="{Binding ClearCommand}" Content="{iconPacks:MaterialDesign Kind=Clear}" />

            </StatusBarItem>
        </StatusBar>

    </DockPanel>
</UserControl>
