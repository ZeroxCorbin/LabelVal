<UserControl
    x:Class="LabelVal.Run.Views.RunManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Run.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModels="clr-namespace:LabelVal.Run.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:RunManager}"
    mc:Ignorable="d">
    <DockPanel>
        <DockPanel VerticalAlignment="Top">

            <md:Card
                Height="68"
                Margin="3,3,0,0"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel>

                    <DockPanel Width="48" Height="48">
                        <iconPacks:PackIconMaterial
                            Width="36"
                            Height="36"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Kind="Run" />
                    </DockPanel>

                    <Border Style="{StaticResource imageBar}" />

                    <DockPanel>

                        <DockPanel DockPanel.Dock="Top">

                            <DockPanel HorizontalAlignment="Left">
                                <DockPanel.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </DockPanel.Background>

                                <TextBlock
                                    Margin="6,0,6,3"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                    Text="Run History" />

                                <Border Style="{StaticResource imageBarHor}" />

                            </DockPanel>

                            <Button
                                Margin="3"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Top"
                                Click="btnCollapseContent"
                                Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                        </DockPanel>

                        <DockPanel>

                            <Button
                                Width="48"
                                HorizontalAlignment="Left"
                                Command="{Binding RunDatabases.RefreshAllCommand}"
                                Content="{iconPacks:Material Kind=Refresh,
                                                             Width=24,
                                                             Height=24}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Refresh Runs" />

                        </DockPanel>

                    </DockPanel>
                </DockPanel>
            </md:Card>

            <DockPanel>
                <Border Style="{StaticResource groupLeft}" />
                <Border Style="{StaticResource groupBottom}" />

                <local:RunDatabases DataContext="{Binding RunDatabases}" />
            </DockPanel>
        </DockPanel>
    </DockPanel>
</UserControl>
