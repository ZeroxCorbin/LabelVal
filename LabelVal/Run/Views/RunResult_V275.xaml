                                </Button.Style>
                            </Button>
                        </StackPanel>-->

                        <Button
                            x:Name="btnV275StoredSectors"
                            HorizontalAlignment="Right"
                            Click="V275StoredSectors_Click"
                            ToolTip="The all seeing eye! Click it...&#x0a;Hold Shift and click for more.">

                            <iconPacks:PackIconModern
                                Width="16"
                                Height="16"
                                Kind="Eye" />

                            <Button.Style>
                                <Style BasedOn="{StaticResource GroupHeaderCirlceButton}" TargetType="{x:Type Button}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275StoredSectors.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>

                        </Button>

                    </DockPanel>
                </GroupBox.Header>

                <ScrollViewer
                    x:Name="ScrollV275StoredSectors"
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    ScrollChanged="ScrollV275StoredSectors_ScrollChanged"
                    VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.ScrollViewer}" TargetType="{x:Type ScrollViewer}">
                            <Setter Property="Height" Value="393" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding V275StoredSectors.Count}" Value="0">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <DockPanel>

                        <GroupBox
                            Margin="3"
                            Padding="3"
                            md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                            md:ColorZoneAssist.Mode="Custom">
                            <GroupBox.Style>
                                <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275FocusedStoredSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </GroupBox.Style>

                            <GroupBox.Header>
                                <DockPanel Margin="-5">
                                    <Button
                                        Margin="6,0,3,0"
                                        Click="btnSaveImage_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        ToolTip="Save as image.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="ContentSave" />
                                    </Button>

                                    <Button
                                        Click="btnCopyImage_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        ToolTip="Copy image to clipboard as PNG.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="ContentCopy" />
                                    </Button>

                                    <Button
                                        HorizontalAlignment="Right"
                                        Click="btnCloseDetails_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        Tag="v275Stored"
                                        ToolTip="Close this.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="Close" />
                                    </Button>
                                </DockPanel>
                            </GroupBox.Header>

                            <sectors:SectorDetails DataContext="{Binding V275FocusedStoredSector}" />

                        </GroupBox>

                        <ItemsControl
                            Padding="0,1,0,0"
                            Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            ItemsSource="{Binding V275StoredSectors}"
                            Tag="v275Stored">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275FocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <sectors:Sector Margin="2,1" Background="{DynamicResource AccentColorBrush}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                </ScrollViewer>

            </GroupBox>

            <!--  V275 Current Sectors  -->
            <GroupBox
                Margin="3"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                d:Visibility="Visible"
                md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                md:ColorZoneAssist.Mode="Custom">
                <GroupBox.Style>
                    <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="{x:Type GroupBox}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding V275CurrentSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>

                <GroupBox.Header>

                    <DockPanel Margin="-5">

                        <md:Card
                            Padding="4,1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="{DynamicResource V275_Brush}">
                            <TextBlock
                                FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"
                                Foreground="White"
                                Text="Current Sectors" />
                        </md:Card>

                        <Button
                            HorizontalAlignment="Right"
                            Click="V275CurrentSector_Click"
                            ToolTip="The all seeing eye! Click it...&#x0a;Hold Shift and click for more.">
                            <Button.Style>
                                <Style BasedOn="{StaticResource GroupHeaderCirlceButton}" TargetType="{x:Type Button}">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275CurrentSectors.Count}" Value="0">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </Button.Style>
                            <iconPacks:PackIconModern
                                Width="16"
                                Height="16"
                                Kind="Eye" />
                        </Button>

                    </DockPanel>
                </GroupBox.Header>

                <ScrollViewer
                    x:Name="ScrollV275CurrentSectors"
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    ScrollChanged="ScrollV275CurrentSectors_ScrollChanged"
                    VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.ScrollViewer}" TargetType="{x:Type ScrollViewer}">
                            <Setter Property="Height" Value="393" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding V275CurrentSectors.Count}" Value="0">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <DockPanel>

                        <GroupBox
                            Margin="3"
                            Padding="3"
                            md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                            md:ColorZoneAssist.Mode="Custom">
                            <GroupBox.Style>
                                <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="GroupBox">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275FocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </GroupBox.Style>

                            <GroupBox.Header>
                                <DockPanel Margin="-5">
                                    <Button
                                        Margin="6,0,3,0"
                                        Click="btnSaveImage_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        ToolTip="Save as image.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="ContentSave" />
                                    </Button>

                                    <Button
                                        Click="btnCopyImage_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        ToolTip="Copy image to clipboard as PNG.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="ContentCopy" />
                                    </Button>

                                    <Button
                                        HorizontalAlignment="Right"
                                        Click="btnCloseDetails_Click"
                                        Style="{StaticResource GroupHeaderCirlceButton}"
                                        Tag="v275Current"
                                        ToolTip="Close this.">
                                        <iconPacks:PackIconMaterial
                                            Width="14"
                                            Height="14"
                                            Kind="Close" />
                                    </Button>
                                </DockPanel>
                            </GroupBox.Header>

                            <sectors:SectorDetails DataContext="{Binding V275FocusedCurrentSector}" />

                        </GroupBox>

                        <ItemsControl
                            Padding="0,2,0,0"
                            Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                            ItemsSource="{Binding V275CurrentSectors}"
                            Tag="v275Current">
                            <ItemsControl.Style>
                                <Style TargetType="ItemsControl">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding V275FocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ItemsControl.Style>

                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <sectors:Sector Margin="2,1" Background="{DynamicResource AccentColorBrush}" />
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                </ScrollViewer>

            </GroupBox>

            <!--  V275 Dissimilar Results  -->
            <GroupBox
                Margin="3"
                Padding="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                d:Visibility="Visible"
                md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                md:ColorZoneAssist.Mode="Custom">
                <GroupBox.Style>
                    <Style BasedOn="{StaticResource MaterialDesignCardGroupBox}" TargetType="{x:Type GroupBox}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding V275DiffSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </GroupBox.Style>

                <GroupBox.Header>

                    <DockPanel Margin="-5">

                        <md:Card
                            Padding="1"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Bottom"
                            Background="{DynamicResource V275_Brush}">
                            <TextBlock
                                FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"
                                Foreground="White"
                                Text="Dissimilar Results" />
                        </md:Card>

                    </DockPanel>
                </GroupBox.Header>

                <ScrollViewer
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    VerticalScrollBarVisibility="Auto">
                    <ScrollViewer.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.ScrollViewer}" TargetType="{x:Type ScrollViewer}">
                            <Setter Property="Height" Value="393" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding V275DiffSectors.Count}" Value="0">
                                    <Setter Property="Height" Value="0" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Style>

                    <ListView
                        Padding="0,1,0,0"
                        ItemsSource="{Binding V275DiffSectors}"
                        Style="{StaticResource MahApps.Styles.ListView}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <sectors:SectorDifferences
                                    Width="220"
                                    Margin="6,0"
                                    Background="{StaticResource AccentColorBrush}"
                                    MouseDown="lstDissimilarSector_Click" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>
            </GroupBox>

        </DockPanel>

    </DockPanel>
</UserControl>
