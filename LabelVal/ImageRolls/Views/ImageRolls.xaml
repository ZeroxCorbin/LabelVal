<UserControl x:Class="LabelVal.ImageRolls.Views.ImageRolls"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelVal.ImageRolls.Views"
             xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             xmlns:viewModels="clr-namespace:LabelVal.ImageRolls.ViewModels"
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             
             xmlns:converters="clr-namespace:LabelVal.Converters"
             d:DataContext="{d:DesignInstance Type=viewModels:ImageRolls}"
             mc:Ignorable="d">

    <UserControl.Resources>
        <converters:ObjectIsNull x:Key="objectIsNull"/>
        
        <CollectionViewSource x:Key="FixedImageRolls" Source="{Binding FixedImageRolls}">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="Name" Direction="Ascending"/>
                <componentmodel:SortDescription PropertyName="SelectedStandard" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>

            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="SelectedStandard" />
                <PropertyGroupDescription PropertyName="TargetDPI" />
            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>

        <CollectionViewSource x:Key="UserImageRolls" Source="{Binding UserImageRolls}">
            <CollectionViewSource.SortDescriptions>
                <componentmodel:SortDescription PropertyName="Name" Direction="Ascending"/>
                <componentmodel:SortDescription PropertyName="SelectedStandard" Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>

            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="SelectedStandard" />
                <PropertyGroupDescription PropertyName="TargetDPI" />

            </CollectionViewSource.GroupDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <DockPanel>
        <GroupBox DockPanel.Dock="Top"
            Margin="3" Padding="3"
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignCardGroupBox}">

            <GroupBox.Header>
                <DockPanel>

                    <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" Padding="1">
                        <TextBlock Text="Image Rolls" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Margin="3,0"/>
                    </md:Card>

                    <Button Command="{Binding AddCommand}"
                                    ToolTip="New Image Roll" Width="20" Height="20" BorderThickness="0" HorizontalAlignment="Left" Margin="6,0,3,0">

                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFloatingActionDarkButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UserImageRoll, Converter={StaticResource objectIsNull}}" Value="True">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <iconPacks:PackIconMaterial Kind="Plus" Margin="-1,0,0,0" Height="14" Width="14"/>
                    </Button>

                    <Button Command="{Binding SaveCommand}"
                                    ToolTip="Save Image Roll" Width="20" Height="20" BorderThickness="0" HorizontalAlignment="Left" Margin="6,0,3,0">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFloatingActionDarkButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UserImageRoll, Converter={StaticResource objectIsNull}}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>

                        <iconPacks:PackIconMaterial Kind="ContentSave" Margin="0,-1,0,0" Height="12" Width="12"/>
                    </Button>

                    <Button Command="{Binding CancelCommand}" 
                                    ToolTip="Cancel" Width="20" Height="20" BorderThickness="0" HorizontalAlignment="Left" Margin="6,0,3,0">
                        <Button.Style>
                            <Style TargetType="{x:Type Button}" BasedOn="{StaticResource MaterialDesignFloatingActionDarkButton}">
                                <Setter Property="Visibility" Value="Collapsed"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding UserImageRoll, Converter={StaticResource objectIsNull}}" Value="False">
                                        <Setter Property="Visibility" Value="Visible"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Button.Style>
                        
                        <iconPacks:PackIconMaterial Kind="Cancel" Margin="0,-1,0,0" Height="14" Width="14"/>
                    </Button>

                </DockPanel>
            </GroupBox.Header>

            <md:DrawerHost x:Name="drwEditImageRoll">
                <md:DrawerHost.Style>
                    <Style TargetType="md:DrawerHost">
                        <Setter Property="IsTopDrawerOpen" Value="False"/>
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding UserImageRoll, Converter={StaticResource objectIsNull}}" Value="False">
                                <Setter Property="IsTopDrawerOpen" Value="True"/>
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </md:DrawerHost.Style>
                
                <md:DrawerHost.TopDrawerContent>
                    
                    <local:ImageRollEntryEdit DataContext="{Binding UserImageRoll}" />
                </md:DrawerHost.TopDrawerContent>
                
            <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" Padding="2">
                
                <ListView ItemsSource="{Binding Source={StaticResource ResourceKey=UserImageRolls}}"
                        SelectedItem="{Binding SelectedUserImageRoll}"
                        IsEnabled="{Binding IsNotRunRunning}" Margin="2" ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.GroupStyle>

                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander>
                                                    <Expander.Header>
                                                        <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Margin="10,3" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                                                    </Expander.Header>

                                                    <ItemsPresenter />

                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>


                    </ListView.GroupStyle>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <DockPanel Margin="0,0,-2,0"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MahApps.Styles.ListViewItem}">
                            <Setter Property="DockPanel.Dock" Value="Top"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                                <DockPanel>
              <TextBlock DockPanel.Dock="Top" Text="{Binding Name}" Margin="10,3" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                                <TextBlock Text="{Binding ImageCount}" Margin="3,0" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
          
                                </DockPanel>

                                </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </md:Card>
            </md:DrawerHost>

        </GroupBox>

        <GroupBox
            Margin="3" Padding="3"
            HorizontalAlignment="Left" VerticalAlignment="Top" 
            Style="{StaticResource MaterialDesignCardGroupBox}">

            <GroupBox.Header>
                <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" Padding="1" HorizontalAlignment="Left">
                    <TextBlock Text="Fixed Image Rolls" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Margin="3,0"/>
                </md:Card>
            </GroupBox.Header>

            <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" Padding="2">

                <ListView ItemsSource="{Binding Source={StaticResource ResourceKey=FixedImageRolls}}"
                        SelectedItem="{Binding SelectedImageRoll}"
                        IsEnabled="{Binding IsNotRunRunning}" Margin="1" ScrollViewer.VerticalScrollBarVisibility="Auto">

                    <ListView.GroupStyle>

                        <!--Lens Name-->
                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander md:ExpanderAssist.ExpanderButtonPosition="Start"
                                                       BorderThickness="0" Padding="0" md:ExpanderAssist.HorizontalHeaderPadding="3">
                                                    <Expander.Header>
                                                        <TextBlock Text="{Binding Name}" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                                                    </Expander.Header>

                                                    <ItemsPresenter />

                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>

                        <GroupStyle>
                            <GroupStyle.ContainerStyle>
                                <Style TargetType="{x:Type GroupItem}">
                                    <Setter Property="Template">
                                        <Setter.Value>
                                            <ControlTemplate TargetType="{x:Type GroupItem}">
                                                <Expander md:ExpanderAssist.ExpanderButtonPosition="Start" Margin="10,0"
                                                       BorderThickness="0" Padding="0" md:ExpanderAssist.HorizontalHeaderPadding="3">
                                                    <Expander.Header>
                                                        <TextBlock Text="{Binding Name}" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                                                    </Expander.Header>

                                                    <ItemsPresenter />

                                                </Expander>
                                            </ControlTemplate>
                                        </Setter.Value>
                                    </Setter>
                                </Style>
                            </GroupStyle.ContainerStyle>
                        </GroupStyle>


                    </ListView.GroupStyle>

                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <DockPanel Margin="0,0,-2,0"/>
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>

                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem" BasedOn="{StaticResource MahApps.Styles.ListViewItem}">
                            <Setter Property="DockPanel.Dock" Value="Top"/>
                        </Style>
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Margin="10,3" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </md:Card>
        </GroupBox>
    </DockPanel>
</UserControl>
