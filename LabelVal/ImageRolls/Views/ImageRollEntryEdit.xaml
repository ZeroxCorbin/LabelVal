<UserControl
    x:Class="LabelVal.ImageRolls.Views.ImageRollEntryEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:converters="clr-namespace:LabelVal.ImageRolls.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.ImageRolls.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sectors="clr-namespace:LabelVal.Sectors.Classes"
    xmlns:viewModels="clr-namespace:LabelVal.ImageRolls.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ImageRollEntry}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:Gs1TableNamesConverter x:Key="Gs1TableNamesConverter" />
        <converters:StandardsTypesConverter x:Key="StandardsTypesConverter" />
    </UserControl.Resources>

    <md:Card
        Margin="3"
        Padding="2"
        HorizontalAlignment="Left"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

        <DockPanel>
            <TextBox
                Margin="3"
                md:HintAssist.Hint="Name"
                md:HintAssist.IsFloating="True"
                DockPanel.Dock="Top"
                Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                Text="{Binding Name}" />

            <DockPanel DockPanel.Dock="Top">
                <ToggleButton
                    Width="24"
                    Height="24"
                    Margin="7"
                    VerticalAlignment="Top"
                    IsChecked="{Binding WriteSectorsBeforeProcess}">

                    <ToggleButton.Content>
                        <iconPacks:PackIconMaterial Kind="FormatListNumbered" />
                    </ToggleButton.Content>

                    <md:ToggleButtonAssist.OnContent>
                        <iconPacks:PackIconMaterial Kind="PlaylistEdit" />
                    </md:ToggleButtonAssist.OnContent>

                    <ToggleButton.Style>
                        <Style BasedOn="{StaticResource MaterialDesignActionToggleButton}" TargetType="ToggleButton">
                            <Setter Property="ToolTip" Value="The template sectors are shared." />
                            <Style.Triggers>
                                <Trigger Property="IsChecked" Value="True">
                                    <Setter Property="ToolTip" Value="The template sectors are independant." />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ToggleButton.Style>
                </ToggleButton>

                <TextBox
                    Margin="3"
                    HorizontalAlignment="Left"
                    md:HintAssist.Hint="Target DPI"
                    md:HintAssist.IsFloating="True"
                    Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                    Text="{Binding TargetDPI}" />

            </DockPanel>
            <DockPanel>
                <ComboBox
                    Margin="3"
                    md:HintAssist.Hint="Standard"
                    md:HintAssist.IsFloating="True"
                    ItemsSource="{Binding StandardsTypes}"
                    SelectedItem="{Binding SelectedStandard, Converter={StaticResource StandardsTypesConverter}}"
                    Style="{StaticResource MaterialDesignFloatingHintComboBox}" />

                <ComboBox
                    Margin="3"
                    md:HintAssist.Hint="GS1 Table"
                    md:HintAssist.IsFloating="True"
                    ItemsSource="{Binding Gs1TableNames}"
                    SelectedItem="{Binding SelectedGS1Table, Converter={StaticResource Gs1TableNamesConverter}}">
                    <ComboBox.Style>
                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintComboBox}" TargetType="ComboBox">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedStandard}" Value="{x:Static sectors:StandardsTypes.GS1}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                    </ComboBox.Style>
                </ComboBox>
            </DockPanel>


        </DockPanel>
    </md:Card>
</UserControl>
