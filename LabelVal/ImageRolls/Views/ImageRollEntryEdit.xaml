<UserControl
    x:Class="LabelVal.ImageRolls.Views.ImageRollEntryEdit"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:System="clr-namespace:System;assembly=mscorlib"
    xmlns:bar_common="clr-namespace:BarcodeVerification.lib.Common;assembly=BarcodeVerification.lib"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.ImageRolls.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sectors="clr-namespace:LabelVal.Sectors.Classes"
    xmlns:viewModels="clr-namespace:LabelVal.ImageRolls.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ImageRoll}"
    mc:Ignorable="d">

    <md:Card
        Margin="3"
        Padding="2"
        HorizontalAlignment="Left"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

        <StackPanel>

            <StackPanel>
                <TextBlock
                    Margin="0,0,0,2"
                    Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                    Text="Name" />

                <TextBox Margin="3,0" Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>


            <DockPanel>
                <StackPanel Margin="6,3,3,3">
                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="Use Image" />
                    <ListBox ItemsSource="{Binding Source={StaticResource ImageRollImageTypes}}" SelectedItem="{Binding ImageType}" />
                </StackPanel>

                <StackPanel Margin="6,3,3,3">
                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="Sector Handling" />
                    <ListBox ItemsSource="{Binding Source={StaticResource ImageRollSectorTypes}}" SelectedItem="{Binding SectorType}" />
                </StackPanel>

                <StackPanel Margin="6,3,3,3" VerticalAlignment="Top">
                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="Target DPI" />
                    <TextBox Margin="3,0" Text="{Binding TargetDPI, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>


            </DockPanel>

            <DockPanel>
                <StackPanel Margin="6,3,3,3">
                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="Application Standards" />
                    <ComboBox ItemsSource="{Binding Source={StaticResource ApplicationStandards}}" SelectedItem="{Binding SelectedApplicationStandard}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding .}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>

                <StackPanel Margin="6,3,3,3">

                    <StackPanel.Style>
                        <Style TargetType="StackPanel">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedApplicationStandard}" Value="{x:Static bar_common:ApplicationStandards.GS1}">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>

                    </StackPanel.Style>

                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="GS1 Table" />
                    <ComboBox ItemsSource="{Binding Source={StaticResource AvailableTables}}" SelectedItem="{Binding SelectedGS1Table}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding .}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>

                    </ComboBox>
                </StackPanel>
            </DockPanel>

            <DockPanel>
                <StackPanel Margin="6,3,3,3">
                    <TextBlock
                        Margin="0,0,0,2"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="Grading Standards" />

                    <ComboBox ItemsSource="{Binding Source={StaticResource GradingStandards}}" SelectedItem="{Binding SelectedGradingStandard}">
                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding .}" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </StackPanel>
            </DockPanel>


        </StackPanel>
    </md:Card>
</UserControl>
