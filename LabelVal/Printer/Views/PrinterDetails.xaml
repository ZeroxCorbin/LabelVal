<UserControl
    x:Class="LabelVal.Printer.Views.PrinterDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.Printer.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:json="clr-namespace:JSONViewer_WPF;assembly=JSONViewer_WPF"
    xmlns:local="clr-namespace:LabelVal.Printer"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:PrinterDetails}"
    mc:Ignorable="d">
    <ScrollViewer Style="{StaticResource MahApps.Styles.ScrollViewer}">

        <GroupBox
            Margin="3"
            Padding="3"
            md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
            md:ColorZoneAssist.Mode="Custom"
            Style="{StaticResource MaterialDesignCardGroupBox}">

            <GroupBox.Header>
                <DockPanel Margin="-5">
                    <md:Card
                        Padding="2,1"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Bottom"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
                        <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Printer JSON" />
                    </md:Card>

                    <Button
                        Margin="6,0,3,0"
                        HorizontalAlignment="Right"
                        Click="btnCloseDetails"
                        Style="{StaticResource GroupHeaderCirlceButton}"
                        ToolTip="Close">
                        <iconPacks:Material
                            Width="16"
                            Height="16"
                            Kind="Close" />
                    </Button>
                </DockPanel>
            </GroupBox.Header>

            <StackPanel>
                <json:JsonViewer
                    Title="Printer Settings"
                    HideButtons="False"
                    JSON="{Binding SelectedPrinter}" />
            </StackPanel>

        </GroupBox>
    </ScrollViewer>
</UserControl>
