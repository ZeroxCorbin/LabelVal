<UserControl
    x:Class="LabelVal.Printer.Views.Printer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LabelVal.Printer.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Printer.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModels="clr-namespace:LabelVal.Printer.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:Printer}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <converters:PrinterSettingThousandthsToInches x:Key="PrinterSettingThousandthsToInches" />
    </UserControl.Resources>

    <md:Card Margin="3" Background="{DynamicResource MahApps.Brushes.Control.Background}">
        <md:Card.Effect>
            <DropShadowEffect
                BlurRadius="5"
                Opacity="0.5"
                ShadowDepth="0"
                Color="{DynamicResource MahApps.Colors.Gray1}" />
        </md:Card.Effect>

        <DockPanel
            Margin="3"
            HorizontalAlignment="Stretch"
            Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="TextElement.Foreground" Value="{DynamicResource MahApps.Brushes.ThemeForeground}" />

                </Style>
            </DockPanel.Style>

            <StackPanel Margin="3">

                <TextBlock
                    Margin="0,0,0,3"
                    HorizontalAlignment="Center"
                    Style="{StaticResource MaterialDesignBodyMediumTextBlock}">
                    <Run Text="{Binding SelectedPrinter.DefaultPageSettings.PrintableArea.Width, StringFormat=N2, Converter={StaticResource PrinterSettingThousandthsToInches}}" />
                    <Run Text="x" />
                    <Run Text="{Binding SelectedPrinter.DefaultPageSettings.PrintableArea.Height, StringFormat=N2, Converter={StaticResource PrinterSettingThousandthsToInches}}" />
                    <Run Text="inches (" />
                    <Run Text="{Binding SelectedPrinter.DefaultPageSettings.PrinterResolution.X}" />
                    <Run Text="DPI )" />
                </TextBlock>

                <Border
                    MaxWidth="260"
                    BorderBrush="{DynamicResource MahApps.Brushes.Button.Border}"
                    BorderThickness="1">
                    <ComboBox
                        Margin="3,0"
                        HorizontalContentAlignment="Center"
                        VerticalContentAlignment="Center"
                        BorderThickness="0"
                        ItemsSource="{Binding Printers}"
                        SelectedItem="{Binding SelectedPrinterName}">

                        <ComboBox.ItemTemplate>
                            <DataTemplate>
                                <TextBlock Text="{Binding}" TextWrapping="Wrap" />
                            </DataTemplate>
                        </ComboBox.ItemTemplate>
                    </ComboBox>
                </Border>


            </StackPanel>
        </DockPanel>
    </md:Card>
</UserControl>
