<UserControl
    x:Class="LabelVal.L95.Views.VerifierManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.L95.ViewModels"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.L95.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:VerifierManager}"
    mc:Ignorable="d">

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Height="68"
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48" Background="{DynamicResource L95_Brush}">
                    <Image
                        Width="36"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Assets/Images/l95-white-outline.ico" />
                </DockPanel>

                <Border Style="{StaticResource imageBar}" />

                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">

                        <DockPanel HorizontalAlignment="Stretch">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>

                            <TextBlock
                                Margin="6,0,6,3"
                                DockPanel.Dock="Top"
                                Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                Text="L95 Verifier" />

                            <Border Style="{StaticResource imageBarHor}" />

                        </DockPanel>

                        <Button
                            Padding="8,0"
                            HorizontalAlignment="Right"
                            Click="btnCollapseContent"
                            Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                            Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                    </DockPanel>

                    <DockPanel Height="24" />

                </DockPanel>
            </DockPanel>

        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Style="{StaticResource groupLeft}" />
            <Border Style="{StaticResource groupBottom}" />

            <ListView
                Margin="3,3,0,0"
                ItemsSource="{Binding Devices}"
                SelectedItem="{Binding SelectedDevice}"
                Style="{StaticResource MahApps.Styles.ListView}">
                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem" />
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:Verifier DataContext="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

    </DockPanel>

</UserControl>
