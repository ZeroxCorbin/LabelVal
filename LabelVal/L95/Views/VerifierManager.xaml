<UserControl
    x:Class="LabelVal.L95.Views.VerifierManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.L95.ViewModels"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.L95.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:VerifierManager}"
    mc:Ignorable="d">

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel
                    Width="47"
                    VerticalAlignment="Stretch"
                    Background="{DynamicResource L95_Brush_Active}">
                    <Image
                        Width="28"
                        Height="28"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Assets/Images/l95-white-outline.ico" />
                </DockPanel>

                <DockPanel
                    Height="32"
                    HorizontalAlignment="Stretch"
                    DockPanel.Dock="Top">
                    <DockPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="{DynamicResource L95}" />
                            <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                        </LinearGradientBrush>
                    </DockPanel.Background>

                    <TextBlock
                        Margin="6,0,6,3"
                        VerticalAlignment="Center"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="95xx" />

                    <Button
                        Padding="8,0"
                        HorizontalAlignment="Right"
                        Click="btnCollapseContent"
                        Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}" />
                </DockPanel>

            </DockPanel>

        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Background="{DynamicResource L95_Brush_Active}" Style="{StaticResource groupLeft}" />
            <Border Background="{DynamicResource L95_Brush_Active}" Style="{StaticResource groupBottom}" />

            <ListView
                Margin="3,3,0,0"
                ItemsSource="{Binding Devices}"
                SelectedItem="{Binding SelectedDevice}"
                Style="{StaticResource MahApps.Styles.ListView}">
                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem" />
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:Verifier DataContext="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </DockPanel>

    </DockPanel>

</UserControl>
