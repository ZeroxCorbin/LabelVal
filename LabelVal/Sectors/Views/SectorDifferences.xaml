                                    <Style TargetType="{x:Type ContentControl}">
                                        <Setter Property="Content">
                                            <Setter.Value>
                                                <DockPanel HorizontalAlignment="Right" VerticalAlignment="Center">

                                                    <TextBlock HorizontalAlignment="Right" Text="{Binding Path=Previous.Value, StringFormat={}{0:N1}, Mode=OneTime}" />

                                                    <TextBlock
                                                        HorizontalAlignment="Right"
                                                        VerticalAlignment="Bottom"
                                                        Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}">
                                                        <TextBlock.Text>
                                                            <MultiBinding Converter="{StaticResource ParameterSuffixToUnitsMultiConverter}">
                                                                <Binding Mode="OneTime" Path="Previous.Suffix" />
                                                                <Binding
                                                                    Mode="OneTime"
                                                                    Path="DataContext.Report.Units"
                                                                    RelativeSource="{RelativeSource AncestorType=UserControl}" />
                                                            </MultiBinding>
                                                        </TextBlock.Text>
                                                    </TextBlock>

                                                    <TextBlock Margin="3,0" Text="{Binding Previous.Grade.Value, StringFormat=N1}" />


                                                    <TextBlock Margin="3,0" Text="{Binding Path=Previous.Grade.Letter, Mode=OneTime}" />

                                                    <Border
                                                        Width="10"
                                                        Height="10"
                                                        BorderThickness="0"
                                                        CornerRadius="5">
                                                        <Border.Style>
                                                            <Style TargetType="{x:Type Border}">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeA_Brush_Active}" />
                                                                <Style.Triggers>
                                                                    <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneTime}" Value="B">
                                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush_Active}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneTime}" Value="C">
                                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush_Active}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneTime}" Value="D">
                                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush_Active}" />
                                                                    </DataTrigger>
                                                                    <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneTime}" Value="F">
                                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush_Active}" />
                                                                    </DataTrigger>
                                                                </Style.Triggers>
                                                            </Style>
                                                        </Border.Style>
                                                    </Border>
                                                </DockPanel>
                                            </Setter.Value>
                                        </Setter>
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Previous, Converter={StaticResource TypeConverter}}" Value="{x:Type bar_common_parameters:Missing}">
                                                <Setter Property="Content" Value="---" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </ContentControl.Style>
                            </ContentControl>
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.GradeValueTemplate>

        </local_converters:DifferenceParameterTemplateSelector>

    </UserControl.Resources>

    <md:Card
        Margin="3"
        Padding="0"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        Foreground="{DynamicResource MahApps.Brushes.Text}">
        <DockPanel Margin="3">

            <StackPanel>

                <TextBlock Margin="3,0,3,3" Text="{Binding Username, Mode=OneWay}" />

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Parameters.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Parameters, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <ContentControl
                                        Grid.Column="0"
                                        Content="{Binding}"
                                        ContentTemplateSelector="{StaticResource DifferenceParameterTemplateSelector}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Blemishes.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Blemishes, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Type, Converter={StaticResource stringToUpper}, Mode=OneWay}" />
                                    </StackPanel>

                                </Grid>
                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Alarms.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Alarms}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <StackPanel>
                                    <DockPanel>

                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeA_Brush_Active}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Error}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush_Active}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Warning}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush_Active}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Value, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />

                                        </DockPanel>

                                    </DockPanel>

                                    <DockPanel>
                                        <DockPanel.Style>
                                            <Style TargetType="{x:Type DockPanel}">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Previous.Name, Mode=OneWay, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>

                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">
                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource ISO_GradeA_Brush_Active}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Error}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush_Active}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Warning}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush_Active}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Value, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />

                                        </DockPanel>

                                    </DockPanel>
                                </StackPanel>

                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel Visibility="{Binding IsNotOCVMatch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding OCVMatchText}" />
                </DockPanel>

                <DockPanel Visibility="{Binding IsSectorMissing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding SectorMissingText}" />
                </DockPanel>

            </StackPanel>

        </DockPanel>

    </md:Card>

</UserControl>