<UserControl
    x:Class="LabelVal.Sectors.Views.SectorDifferences"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:LabelVal.Converters"
    xmlns:ViewModels="clr-namespace:LabelVal.Sectors.Interfaces"
    xmlns:bar_common="clr-namespace:BarcodeVerification.lib.Common;assembly=BarcodeVerification.lib"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Sectors.Views"
    xmlns:local_converters="clr-namespace:LabelVal.Sectors.Converters"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:ISectorDetails}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:FloatStringTrimConverter x:Key="floatTrim" />
        <BooleanToVisibilityConverter x:Key="booltovis" />
        <Converters:StringCamelUnspaced2StringPascalSpaced x:Key="stringToUpper" />

        <local_converters:BoolToPassFailString x:Key="BoolToPassFailString" />
        <local_converters:ParameterEnumToParameterDescription x:Key="ParameterEnumToParameterDescription" />

        <local_converters:DifferenceParameterTemplateSelector x:Key="DifferenceParameterTemplateSelector">

            <local_converters:DifferenceParameterTemplateSelector.Missing>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Parameter, Converter={StaticResource EnumValueToDescription}, Mode=OneTime}"
                            TextWrapping="Wrap" />
                        <TextBlock
                            Grid.Column="1"
                            Margin="3,0"
                            VerticalAlignment="Center"
                            Text="---" />
                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.Missing>

            <local_converters:DifferenceParameterTemplateSelector.ValueDoubleTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Current.Result, Mode=OneWay}" Value="FAIL">
                                                    <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Current.Result, Mode=OneWay}" />

                            </DockPanel>

                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Previous.Result, Mode=OneWay}" Value="FAIL">
                                                    <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Previous.Result, Mode=OneWay}" />

                            </DockPanel>
                        </StackPanel>


                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.ValueDoubleTemplate>

            <local_converters:DifferenceParameterTemplateSelector.ValueStringTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">

                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Current.Result, Mode=OneWay}" Value="FAIL">
                                                    <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Current.Result, Mode=OneWay}" />

                            </DockPanel>

                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Previous.Result, Mode=OneWay}" Value="FAIL">
                                                    <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Previous.Result, Mode=OneWay}" />

                            </DockPanel>
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.ValueStringTemplate>

            <local_converters:DifferenceParameterTemplateSelector.PassFailTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Parameter, Converter={StaticResource EnumValueToDescription}, Mode=OneTime}"
                            TextWrapping="Wrap"
                            ToolTip="{Binding Path=Parameter, Converter={StaticResource ParameterEnumToParameterDescription}, Mode=OneTime}" />
                        <DockPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">


                            <TextBlock
                                Width="25"
                                Margin="3,0"
                                Text="{Binding Path=Value, Converter={StaticResource BoolToPassFailString}, Mode=OneTime}" />
                            <Border
                                Width="10"
                                Height="10"
                                BorderThickness="0"
                                CornerRadius="5">
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=Value, Mode=OneTime}" Value="False">
                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DockPanel>
                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.PassFailTemplate>

            <local_converters:DifferenceParameterTemplateSelector.ValuePassFailTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>
                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Parameter, Converter={StaticResource EnumValueToDescription}, Mode=OneTime}"
                            TextWrapping="Wrap"
                            ToolTip="{Binding Path=Parameter, Converter={StaticResource ParameterEnumToParameterDescription}, Mode=OneTime}" />
                        <DockPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0:N1} {1}">
                                        <Binding Mode="OneTime" Path="Value" />
                                        <Binding Mode="OneTime" Path="Suffix" />
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>

                            <TextBlock
                                Width="25"
                                Margin="3,0"
                                Text="{Binding PassFail.Value, Converter={StaticResource BoolToPassFailString}}" />

                            <Border
                                Width="10"
                                Height="10"
                                BorderThickness="0"
                                CornerRadius="5">
                                <Border.Style>
                                    <Style TargetType="{x:Type Border}">
                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding Path=PassFail.Value, Mode=OneTime}" Value="False">
                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                            </Border>
                        </DockPanel>
                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.ValuePassFailTemplate>

            <local_converters:DifferenceParameterTemplateSelector.GradeTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0" Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Path=Current.Value, StringFormat=N1, Mode=OneWay}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="B">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="C">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="D">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="F">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Path=Current.Letter, Mode=OneWay}" />

                            </DockPanel>

                            <DockPanel HorizontalAlignment="Right">

                                <TextBlock Margin="3,0" Text="{Binding Path=Previous.Value, StringFormat=N1, Mode=OneWay}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="B">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="C">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="D">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="F">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Path=Previous.Letter, Mode=OneWay}" />

                            </DockPanel>
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.GradeTemplate>

            <local_converters:DifferenceParameterTemplateSelector.GradeValueTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock
                            Grid.Column="0"
                            Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                            TextWrapping="Wrap" />

                        <StackPanel
                            Grid.Column="1"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Center">
                            <DockPanel HorizontalAlignment="Right">
                                <TextBlock Margin="3,0" Text="{Binding Path=Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <TextBlock Margin="3,0" Text="{Binding Path=Current.Grade.Value, StringFormat=N1, Mode=OneWay}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="B">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="C">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="D">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="F">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Path=Current.Grade.Letter, Mode=OneWay}" />

                            </DockPanel>

                            <DockPanel HorizontalAlignment="Right">
                                <TextBlock Margin="3,0" Text="{Binding Path=Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                <TextBlock Margin="3,0" Text="{Binding Path=Previous.Grade.Value, StringFormat=N1, Mode=OneWay}" />

                                <Border
                                    Width="10"
                                    Height="10"
                                    BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                    BorderThickness="1"
                                    CornerRadius="3">
                                    <Border.Style>
                                        <Style TargetType="{x:Type Border}">
                                            <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="B">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="C">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="D">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="F">
                                                    <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </Border.Style>
                                </Border>

                                <TextBlock
                                    MinWidth="10"
                                    Margin="3,0"
                                    Text="{Binding Path=Previous.Grade.Letter, Mode=OneWay}" />

                            </DockPanel>
                        </StackPanel>

                    </Grid>
                </DataTemplate>
            </local_converters:DifferenceParameterTemplateSelector.GradeValueTemplate>

        </local_converters:DifferenceParameterTemplateSelector>

    </UserControl.Resources>

    <md:Card
        Margin="3"
        Padding="0"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        Foreground="{DynamicResource MahApps.Brushes.Text}">
        <DockPanel Margin="3">

            <StackPanel>

                <TextBlock Margin="3,0,3,3" Text="{Binding Username, Mode=OneWay}" />

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Parameters.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Parameters, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>
                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Path=Parameter, Converter={StaticResource EnumValueToDescription}, Mode=OneTime}"
                                        TextWrapping="Wrap" />
                                    <ContentControl
                                        Grid.Column="1"
                                        Content="{Binding}"
                                        ContentTemplateSelector="{StaticResource DifferenceParameterTemplateSelector}" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Blemishes.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Blemishes, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Type, Converter={StaticResource stringToUpper}, Mode=OneWay}" />
                                    </StackPanel>

                                </Grid>
                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Alarms.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Alarms}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <StackPanel>
                                    <DockPanel>

                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Error}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Warning}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Value, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />

                                        </DockPanel>

                                    </DockPanel>

                                    <DockPanel>
                                        <DockPanel.Style>
                                            <Style TargetType="{x:Type DockPanel}">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Previous.Name, Mode=OneWay, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>

                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">
                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Error}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="{x:Static bar_common:AvaailableAlarmCategories.Warning}">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Value, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />

                                        </DockPanel>

                                    </DockPanel>
                                </StackPanel>

                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel Visibility="{Binding IsNotOCVMatch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding OCVMatchText}" />
                </DockPanel>

                <DockPanel Visibility="{Binding IsSectorMissing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding SectorMissingText}" />
                </DockPanel>

            </StackPanel>

        </DockPanel>

    </md:Card>

</UserControl>
