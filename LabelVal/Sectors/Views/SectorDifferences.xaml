<UserControl
    x:Class="LabelVal.Sectors.Views.SectorDifferences"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:LabelVal.Converters"
    xmlns:ViewModels="clr-namespace:LabelVal.Sectors.Interfaces"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Sectors.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:ISectorDetails}"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Converters:FloatStringTrimConverter x:Key="floatTrim" />
        <BooleanToVisibilityConverter x:Key="booltovis" />
        <Converters:StringCamelUnspaced2StringPascalSpaced x:Key="stringToUpper" />
    </UserControl.Resources>

    <md:Card
        Margin="3"
        Padding="0"
        Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
        Foreground="{DynamicResource MahApps.Brushes.Text}">
        <DockPanel Margin="3">

            <StackPanel>

                <TextBlock Margin="3,0,3,3" Text="{Binding UserName, Mode=OneWay}" />

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding GradeValues.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />

                    <ItemsControl ItemsSource="{Binding GradeValues}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Path=Current.Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                                        TextWrapping="Wrap" />

                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                        <DockPanel HorizontalAlignment="Right">
                                            <TextBlock Margin="3,0" Text="{Binding Path=Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <TextBlock Margin="3,0" Text="{Binding Path=Current.Grade.Value, StringFormat=N1, Mode=OneWay}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="B">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="C">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="D">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Grade.Letter, Mode=OneWay}" Value="F">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Path=Current.Grade.Letter, Mode=OneWay}" />

                                        </DockPanel>

                                        <DockPanel HorizontalAlignment="Right">
                                            <TextBlock Margin="3,0" Text="{Binding Path=Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <TextBlock Margin="3,0" Text="{Binding Path=Previous.Grade.Value, StringFormat=N1, Mode=OneWay}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="B">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="C">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="D">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Grade.Letter, Mode=OneWay}" Value="F">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Path=Previous.Grade.Letter, Mode=OneWay}" />

                                        </DockPanel>
                                    </StackPanel>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Values.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Values}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                                        TextWrapping="Wrap" />

                                    <DockPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                        <TextBlock Text="{Binding Current.Value, Mode=OneWay, StringFormat={}{0:N0} /}" />
                                        <TextBlock Text="{Binding Previous.Value, Mode=OneWay, StringFormat={} {0:N0}}" />
                                    </DockPanel>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ValueResults.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding ValueResults}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                                        TextWrapping="Wrap" />

                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">

                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Result, Mode=OneWay}" Value="FAIL">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Current.Result, Mode=OneWay}" />

                                        </DockPanel>

                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Result, Mode=OneWay}" Value="FAIL">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Previous.Result, Mode=OneWay}" />

                                        </DockPanel>
                                    </StackPanel>


                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Gs1ValueResults.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Gs1ValueResults}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock
                                        Grid.Column="0"
                                        Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}"
                                        TextWrapping="Wrap" />

                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">

                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Current.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Result, Mode=OneWay}" Value="FAIL">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Current.Result, Mode=OneWay}" />

                                        </DockPanel>

                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Previous.Value, Mode=OneWay, StringFormat={}({0:N1})}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Result, Mode=OneWay}" Value="FAIL">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Previous.Result, Mode=OneWay}" />

                                        </DockPanel>
                                    </StackPanel>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Gs1Grades.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Gs1Grades}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0" Text="{Binding Path=Name, Converter={StaticResource stringToUpper}, Mode=OneWay}" />

                                    <StackPanel
                                        Grid.Column="1"
                                        HorizontalAlignment="Right"
                                        VerticalAlignment="Center">
                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Path=Current.Value, StringFormat=N1, Mode=OneWay}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="B">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="C">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="D">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Letter, Mode=OneWay}" Value="F">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Path=Current.Letter, Mode=OneWay}" />

                                        </DockPanel>

                                        <DockPanel HorizontalAlignment="Right">

                                            <TextBlock Margin="3,0" Text="{Binding Path=Previous.Value, StringFormat=N1, Mode=OneWay}" />

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="B">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeB_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="C">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeC_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="D">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeD_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Letter, Mode=OneWay}" Value="F">
                                                                <Setter Property="Background" Value="{DynamicResource ISO_GradeF_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                MinWidth="10"
                                                Margin="3,0"
                                                Text="{Binding Path=Previous.Letter, Mode=OneWay}" />

                                        </DockPanel>
                                    </StackPanel>

                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Blemishes.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Blemishes, Mode=OneWay}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <Grid Margin="2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="auto" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="auto" />
                                    </Grid.ColumnDefinitions>

                                    <StackPanel Grid.Column="0" Orientation="Horizontal">
                                        <TextBlock Text="{Binding Path=Type, Converter={StaticResource stringToUpper}, Mode=OneWay}" />
                                    </StackPanel>

                                </Grid>
                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Alarms.Count, Mode=OneWay}" Value="0">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>
                    <Separator DockPanel.Dock="Top" />
                    <ItemsControl ItemsSource="{Binding Alarms}">
                        <ItemsControl.ItemTemplate>
                            <HierarchicalDataTemplate>
                                <StackPanel>
                                    <DockPanel>
                                            <DockPanel.Style>
                                                <Style TargetType="{x:Type DockPanel}">
                                                    <Setter Property="Visibility" Value="Visible" />
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Current.Name, Mode=OneWay, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DockPanel.Style>
                                        
                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">

                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="2">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Current.Category, Mode=OneTime}" Value="1">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Name, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Data.SubAlarm, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                        </DockPanel>

                                        <DockPanel>
                                            <DockPanel.Style>
                                                <Style TargetType="DockPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Current.Data.Text}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DockPanel.Style>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Data.Text, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Current.Data.Expected, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                        </DockPanel>

                                    </DockPanel>

                                    <DockPanel>
                                        <DockPanel.Style>
                                            <Style TargetType="{x:Type DockPanel}">
                                                <Setter Property="Visibility" Value="Visible" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Previous.Name, Mode=OneWay, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </DockPanel.Style>

                                        <DockPanel Margin="3,0" DockPanel.Dock="Top">
                                            <Border
                                                Width="10"
                                                Height="10"
                                                BorderBrush="{DynamicResource MahApps.Brushes.Accent}"
                                                BorderThickness="1"
                                                CornerRadius="3">
                                                <Border.Style>
                                                    <Style TargetType="{x:Type Border}">
                                                        <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                                        <Style.Triggers>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="2">
                                                                <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                                            </DataTrigger>
                                                            <DataTrigger Binding="{Binding Previous.Category, Mode=OneTime}" Value="1">
                                                                <Setter Property="Background" Value="{DynamicResource SectorWarning_Brush}" />
                                                            </DataTrigger>
                                                        </Style.Triggers>
                                                    </Style>
                                                </Border.Style>
                                            </Border>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Name, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Data.SubAlarm, Converter={StaticResource stringToUpper}, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                        </DockPanel>

                                        <DockPanel>
                                            <DockPanel.Style>
                                                <Style TargetType="DockPanel">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding Previous.Data.Text}" Value="{x:Null}">
                                                            <Setter Property="Visibility" Value="Collapsed" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </DockPanel.Style>

                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Data.Text, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                            <TextBlock
                                                Margin="3,0"
                                                Text="{Binding Previous.Data.Expected, Mode=OneTime}"
                                                TextWrapping="Wrap" />
                                        </DockPanel>

                                    </DockPanel>
                                </StackPanel>

                            </HierarchicalDataTemplate>
                        </ItemsControl.ItemTemplate>

                    </ItemsControl>
                </DockPanel>

                <DockPanel Visibility="{Binding IsNotOCVMatch, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding OCVMatchText}" />
                </DockPanel>

                <DockPanel Visibility="{Binding IsSectorMissing, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <Separator DockPanel.Dock="Top" />
                    <TextBlock Margin="2" Text="{Binding SectorMissingText}" />
                </DockPanel>

            </StackPanel>

        </DockPanel>

    </md:Card>

</UserControl>
