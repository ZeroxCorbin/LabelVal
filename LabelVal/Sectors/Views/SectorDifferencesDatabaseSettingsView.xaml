<UserControl
    x:Class="LabelVal.Sectors.Views.SectorDifferencesDatabaseSettingsView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:classes="clr-namespace:LabelVal.Sectors.Classes"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelVal.Sectors.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources>
        <Style x:Key="ExplanationTextStyle" TargetType="TextBox">
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="IsReadOnly" Value="True" />
            <Setter Property="FontStyle" Value="Italic" />
            <Setter Property="Foreground" Value="Gray" />
            <Setter Property="Margin" Value="0,0,0,5" />
        </Style>
    </UserControl.Resources>

    <StackPanel>

        <GroupBox Header="Grades">
            <StackPanel>
                <CheckBox Content="Compare Grade Value" IsChecked="{Binding GradeCompareSettings.CompareLetterValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <DockPanel>
                    <Label Content="Grade Value Tolerance" />
                    <TextBox Text="{Binding GradeCompareSettings.LetterValueTolerance, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                </DockPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Graded Values">
            <StackPanel>
                <CheckBox Content="Compare Value" IsChecked="{Binding GradeValueCompareSettings.CompareValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <DockPanel>
                    <Label Content="Value Tolerance" />
                    <TextBox Text="{Binding GradeValueCompareSettings.ValueTolerance, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                </DockPanel>
                <CheckBox Content="Compare Grade Value" IsChecked="{Binding GradeValueCompareSettings.Grade.CompareLetterValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <DockPanel>
                    <Label Content="Grade Value Tolerance" />
                    <TextBox Text="{Binding GradeValueCompareSettings.Grade.LetterValueTolerance, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                </DockPanel>

            </StackPanel>
        </GroupBox>

        <GroupBox Header="Pass/Fail">
            <StackPanel>
                <CheckBox Content="Compare" IsChecked="{Binding PassFailCompareSettings.Compare, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
            </StackPanel>
        </GroupBox>

        <GroupBox Header="Pass/Fail Values">
            <StackPanel>
                <CheckBox Content="Compare Value" IsChecked="{Binding ValuePassFailCompareSettings.CompareValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <DockPanel>
                    <Label Content="Value Tolerance" />
                    <TextBox Text="{Binding ValuePassFailCompareSettings.ValueTolerance, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                </DockPanel>
                <CheckBox Content="Compare Pass/Fail" IsChecked="{Binding ValuePassFailCompareSettings.PassFail.Compare, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />

            </StackPanel>
        </GroupBox>

        <GroupBox Header="Value">
            <StackPanel>
                <CheckBox Content="Compare Value" IsChecked="{Binding ValueDoubleCompareSettings.CompareValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <DockPanel>
                    <Label Content="Value Tolerance" />
                    <TextBox Text="{Binding ValueDoubleCompareSettings.ValueTolerance, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                </DockPanel>
            </StackPanel>
        </GroupBox>

        <GroupBox Header="GS1 Decode">
            <StackPanel>
                <CheckBox Content="Compare Pass/Fail" IsChecked="{Binding GS1DecodeCompareSettings.PassFail.Compare, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Input" IsChecked="{Binding GS1DecodeCompareSettings.CompareInput, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Formatted Out" IsChecked="{Binding GS1DecodeCompareSettings.CompareFormattedOut, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Fields" IsChecked="{Binding GS1DecodeCompareSettings.CompareFields, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Errors" IsChecked="{Binding GS1DecodeCompareSettings.CompareError, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
            </StackPanel>
        </GroupBox>
        <GroupBox Header="Overall Grade">
            <StackPanel>
                <CheckBox Content="Compare Grade" IsChecked="{Binding OverallGradeCompareSettings.GradeSettings.CompareLetterValue, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Aperture" IsChecked="{Binding OverallGradeCompareSettings.CompareAperture, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
                <CheckBox Content="Compare Wave Length" IsChecked="{Binding OverallGradeCompareSettings.CompareWaveLength, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />

            </StackPanel>
        </GroupBox>
        <GroupBox Header="Strings">
            <StackPanel>
                <CheckBox Content="Compare String" IsChecked="{Binding ValueStringCompareSettings.CompareString, Source={x:Static classes:SectorDifferencesDatabaseSettings.Instance}}" />
            </StackPanel>
        </GroupBox>
    </StackPanel>

</UserControl>