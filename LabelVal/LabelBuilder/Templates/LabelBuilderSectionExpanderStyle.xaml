<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <Style x:Key="LabelBuilderSectionExpanderStyle" TargetType="Expander">
        <Setter Property="Foreground" Value="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}" />
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource LabelBuilder_Brush_Active}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <md:Card
                            Grid.Row="0"
                            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">
                            <Border
                                x:Name="HeaderBorder"
                                CornerRadius="3"
                                Cursor="Hand"
                                Focusable="True">
                                <Border.InputBindings>
                                    <MouseBinding
                                        Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding ElementName=HeaderBorder}"
                                        Gesture="LeftClick" />
                                    <KeyBinding
                                        Key="Enter"
                                        Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding ElementName=HeaderBorder}" />
                                    <KeyBinding
                                        Key="Space"
                                        Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                        CommandParameter="{Binding ElementName=HeaderBorder}" />
                                </Border.InputBindings>
                                <Border.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </Border.Background>

                                <Grid MinHeight="24" Margin="0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="28" />
                                        <ColumnDefinition Width="*" />
                                    </Grid.ColumnDefinitions>

                                    <Viewbox
                                        Grid.Column="0"
                                        Width="16"
                                        Height="16"
                                        Margin="6,0,6,0"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center">
                                        <Path
                                            x:Name="Arrow"
                                            Data="M 0 0 L 8 0 L 4 6 Z"
                                            Fill="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                            RenderTransformOrigin="0.5,0.5">
                                            <Path.RenderTransform>
                                                <RotateTransform Angle="0" />
                                            </Path.RenderTransform>
                                        </Path>
                                    </Viewbox>

                                    <ContentPresenter
                                        Grid.Column="1"
                                        Margin="2,2,6,2"
                                        VerticalAlignment="Center"
                                        ContentSource="Header"
                                        RecognizesAccessKey="True" />
                                </Grid>
                            </Border>
                        </md:Card>

                        <!-- Expandable content container (was ContentPresenter) -->
                        <Border
                            x:Name="ExpandSite"
                            Grid.Row="1"
                            Visibility="Collapsed"
                            Margin="0">
                            <DockPanel>
                                <!-- Decorative left/top backgrounds -->
                                <Border Margin="0,0,3,0" Style="{StaticResource groupLeft}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="1,1" EndPoint="0.2,0.2">
                                            <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active}" />
                                            <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.ThemeBackground}" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>
                                <Border Margin="-3,3,0,0" Style="{StaticResource groupBottom}">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0.8,0.8">
                                            <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active}" />
                                            <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.ThemeBackground}" />
                                        </LinearGradientBrush>
                                    </Border.Background>
                                </Border>

                                <!-- Actual user content -->
                                <ContentPresenter
                                    Margin="6,4,6,6"
                                    ContentSource="Content"
                                    Focusable="False" />
                            </DockPanel>
                        </Border>

                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Arrow" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger SourceName="HeaderBorder" Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active50}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>