<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Style x:Key="LabelBuilderSectionExpanderStyle" TargetType="Expander">
        <Setter Property="Foreground" Value="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}" />
        <Setter Property="Background" Value="{DynamicResource MahApps.Brushes.ThemeBackground}" />
        <Setter Property="BorderBrush" Value="{DynamicResource LabelBuilder_Brush_Active}" />
        <Setter Property="BorderThickness" Value="0" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="HorizontalContentAlignment" Value="Stretch" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Expander">
                    <Grid SnapsToDevicePixels="True">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <!--  Header  -->
                        <Border
                            x:Name="HeaderBorder"
                            Grid.Row="0"
                            CornerRadius="3"
                            Cursor="Hand"
                            Focusable="True">
                            <Border.InputBindings>
                                <!--  Mouse click  -->
                                <MouseBinding
                                    Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding ElementName=HeaderBorder}"
                                    Gesture="LeftClick" />
                                <!--  Keyboard accessibility  -->
                                <KeyBinding
                                    Key="Enter"
                                    Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding ElementName=HeaderBorder}" />
                                <KeyBinding
                                    Key="Space"
                                    Command="{Binding ExpanderHeaderClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding ElementName=HeaderBorder}" />
                            </Border.InputBindings>
                            <Border.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </Border.Background>

                            <Grid MinHeight="24" Margin="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="28" />
                                </Grid.ColumnDefinitions>

                                <Viewbox
                                    Grid.Column="1"
                                    Width="16"
                                    Height="16"
                                    Margin="6,0,6,0"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center">
                                    <Path
                                        x:Name="Arrow"
                                        Data="M 0 0 L 8 0 L 4 6 Z"
                                        Fill="{DynamicResource LabelBuilder_Brush_Active}"
                                        RenderTransformOrigin="0.5,0.5">
                                        <Path.RenderTransform>
                                            <RotateTransform Angle="0" />
                                        </Path.RenderTransform>
                                    </Path>
                                </Viewbox>

                                <ContentPresenter
                                    Grid.Column="0"
                                    Margin="2,2,6,2"
                                    VerticalAlignment="Center"
                                    ContentSource="Header"
                                    RecognizesAccessKey="True" />
                            </Grid>
                        </Border>

                        <!--  Content  -->
                        <ContentPresenter
                            x:Name="ExpandSite"
                            Grid.Row="1"
                            Margin="6,4,6,6"
                            ContentSource="Content"
                            Focusable="False"
                            Visibility="Collapsed" />
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsExpanded" Value="True">
                            <Setter TargetName="ExpandSite" Property="Visibility" Value="Visible" />
                            <Setter TargetName="Arrow" Property="RenderTransform">
                                <Setter.Value>
                                    <RotateTransform Angle="180" />
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger SourceName="HeaderBorder" Property="IsMouseOver" Value="True">
                            <Setter TargetName="HeaderBorder" Property="Background">
                                <Setter.Value>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource LabelBuilder_Color_Active50}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </Setter.Value>
                            </Setter>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.55" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

</ResourceDictionary>