<UserControl
    x:Class="LabelVal.LabelBuilder.Views.LabelBuilderView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:barcodeViews="clr-namespace:BarcodeBuilder.lib.Wpf.Views;assembly=BarcodeBuilder.lib.Wpf"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.LabelBuilder.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:LabelVal.LabelBuilder.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:LabelBuilderViewModel}"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <md:Card
            Grid.Column="0"
            Height="68"
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48" Background="Fuchsia">
                    <iconPacks:PackIconMaterial
                        Width="36"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Kind="Barcode" />
                </DockPanel>

                <Border Style="{StaticResource imageBar}" />

                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">

                        <DockPanel HorizontalAlignment="Stretch">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>

                            <TextBlock
                                Margin="6,0,6,3"
                                DockPanel.Dock="Top"
                                Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                Text="Label Builder" />

                            <Border Style="{StaticResource imageBarHor}" />

                        </DockPanel>

                        <Button
                            Padding="8,0"
                            HorizontalAlignment="Right"
                            Click="btnCollapseContent"
                            Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                            Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                    </DockPanel>

                    <DockPanel Height="24" />

                </DockPanel>
            </DockPanel>

        </md:Card>

        <DockPanel Grid.Row="1" Margin="3,0">
            <ScrollViewer HorizontalScrollBarVisibility="Auto">
                <barcodeViews:BarcodeSettingsView
                    Margin="3,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    DataContext="{Binding BarcodeBuilderViewModel}" />
            </ScrollViewer>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
                <barcodeViews:BarcodeManipulationView
                    Margin="3,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    DataContext="{Binding BarcodeBuilderViewModel.BarcodeManipulationViewModel}" />
            </ScrollViewer>

            <ScrollViewer Grid.Row="1" HorizontalScrollBarVisibility="Auto">
                <barcodeViews:BarcodeBuilderImagesView
                    Margin="3,0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    DataContext="{Binding BarcodeBuilderViewModel.BarcodeBuilderImagesViewModel}" />
            </ScrollViewer>
        </DockPanel>

    </Grid>
</UserControl>
