<UserControl x:Class="LabelVal.ImageViewer3D.Views.ImageViewer3D"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                xmlns:h="clr-namespace:HelixToolkit.Wpf;assembly=HelixToolkit.Wpf"
             xmlns:local="clr-namespace:LabelVal.ImageViewer3D.Views"
                xmlns:converters="clr-namespace:LabelVal.Converters"
             xmlns:vm="clr-namespace:LabelVal.ImageViewer3D.ViewModels"
             d:DataContext="{d:DesignInstance Type=vm:ImageViewer3D}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BindingProxy x:Key="proxy" Data="{Binding}" />
    </UserControl.Resources>
    <Grid>
        <h:HelixViewport3D ItemsSource="{Binding Visuals}"
                            Background="{h:LinearGradientBrush Gray, White}"
                           ShowCameraInfo="True" 
                           ShowCoordinateSystem="True" MinWidth="360">
            <h:HelixViewport3D.Camera>
                <PerspectiveCamera 
                    Position="{Binding Camera.Position,Mode=TwoWay, Source={StaticResource proxy}}"
                    LookDirection="{Binding Camera.LookDirection,Mode=TwoWay, Source={StaticResource proxy}}"
                    UpDirection="{Binding Camera.UpDirection,Mode=TwoWay, Source={StaticResource proxy}}"
                    FieldOfView="{Binding Camera.FieldOfView,Mode=TwoWay, Source={StaticResource proxy}}"
                    />
            </h:HelixViewport3D.Camera>

        </h:HelixViewport3D>
    </Grid>
</UserControl>
