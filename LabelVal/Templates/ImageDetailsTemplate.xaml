<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:image="clr-namespace:LabelVal.ImageRolls.ViewModels"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="/Templates/SharedButtonStyles.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:ShortenUIDConverter x:Key="shortenUID" />
    <converters:Double2String x:Key="double2String" />


    <DataTemplate x:Key="imageDetailsTemplate" DataType="{x:Type image:ImageEntry}">
        <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

            <!--  Image Details  -->
            <md:Card
                x:Name="crdSource"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <StackPanel>

                    <DockPanel Margin="3,3,3,0" DockPanel.Dock="Top">
                        <TextBox
                            HorizontalContentAlignment="Center"
                            md:HintAssist.Hint="Total Pixels"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ImageTotalPixels, Mode=OneWay}" />
                    </DockPanel>

                    <DockPanel Margin="3,3,3,0" DockPanel.Dock="Top">

                        <Grid DockPanel.Dock="Top">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="W" />
                            <TextBlock
                                Grid.Column="1"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="Pixels" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="H" />
                        </Grid>

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageWidth, Mode=OneWay, StringFormat=N0}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="3,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="X" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageHeight, Mode=OneWay, StringFormat=N0}" />
                        </Grid>

                    </DockPanel>

                    <DockPanel Margin="3,3,3,0" DockPanel.Dock="Top">

                        <TextBlock
                            HorizontalAlignment="Center"
                            DockPanel.Dock="Top"
                            Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                            Text="DPI" />

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageDpiX, Mode=OneWay, StringFormat=N0}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="3,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="X" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageDpiY, Mode=OneWay, StringFormat=N0}" />
                        </Grid>

                    </DockPanel>

                    <DockPanel Margin="3,3,3,0" DockPanel.Dock="Top">

                        <TextBlock
                            HorizontalAlignment="Center"
                            DockPanel.Dock="Top"
                            Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                            Text="Inches" />


                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <TextBlock
                                Grid.Column="0"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageInchesWidth, Mode=OneWay, StringFormat=N2}" />
                            <TextBlock
                                Grid.Column="1"
                                Margin="3,0"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Bottom"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="X" />
                            <TextBlock
                                Grid.Column="2"
                                HorizontalAlignment="Center"
                                Text="{Binding ImageInchesHeight, Mode=OneWay, StringFormat=N2}" />
                        </Grid>

                    </DockPanel>

                    <DockPanel Margin="3,3,3,0" DockPanel.Dock="Top">

                        <StackPanel Margin="3">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="Format" />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ImagePixelFormat, Mode=OneWay}" />
                        </StackPanel>

                        <StackPanel Margin="3">
                            <TextBlock
                                HorizontalAlignment="Center"
                                Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                Text="Bit D." />
                            <TextBlock HorizontalAlignment="Center" Text="{Binding ImageBitDepth, Mode=OneWay}" />
                        </StackPanel>

                    </DockPanel>

                </StackPanel>

            </md:Card>

            <md:Card
                Margin="0,3,0,0"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel Margin="3">

                    <!--<DockPanel DockPanel.Dock="Top">

                        <TextBox
                            Margin="3,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Left"
                            md:HintAssist.Hint="Source Hash"
                            BorderThickness="0"
                            DockPanel.Dock="Top"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Path=DataContext.SourceImage.UID, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource shortenUID}}" />-->

                    <TextBox
                        Margin="3,0"
                        HorizontalContentAlignment="Center"
                        md:HintAssist.FloatingHintHorizontalAlignment="Left"
                        md:HintAssist.Hint="Hash"
                        BorderThickness="0"
                        IsHitTestVisible="False"
                        Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                        Text="{Binding Path=UID, Converter={StaticResource shortenUID}}" />
                    <!--</DockPanel>-->

                </DockPanel>

            </md:Card>


            <!--  Printer  -->
            <!--
            <GroupBox DockPanel.Dock="Top" VerticalAlignment="Top" Margin="3" Padding="3"
                              Background="{DynamicResource MahApps.Brushes.ThemeBackground}"
                              Style="{StaticResource MaterialDesignCardGroupBox}"
                            md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                            md:ColorZoneAssist.Mode="Custom">

                <GroupBox.Header>
                    <DockPanel Margin="-5">
                        <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" HorizontalAlignment="Left" Padding="2,1">
                            <TextBlock Text="Printer" FontSize="{DynamicResource MahApps.Font.Size.Tooltip}"/>
                        </md:Card>
                    </DockPanel>
                </GroupBox.Header>

                <DockPanel Margin="0,6,0,0">

                    <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Stretch" Margin="0,3">
                        <TextBox Text="{Binding Printer2ImageTotalPixelDeviation, Mode=OneWay}"
                                         BorderThickness="0" HorizontalContentAlignment="Center"
                                         md:HintAssist.Hint="Total Pixels" md:HintAssist.IsFloating="True" IsHitTestVisible="False" md:HintAssist.FloatingHintHorizontalAlignment="Left"/>
                    </DockPanel>

                    <DockPanel DockPanel.Dock="Top" VerticalAlignment="Top" Margin="0,3">
                        <TextBox Text="{Binding DeviationWidth, Mode=OneWay}"
                                         Width="40" BorderThickness="0" HorizontalContentAlignment="Center"
