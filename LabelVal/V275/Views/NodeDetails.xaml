<UserControl x:Class="LabelVal.V275.Views.NodeDetails"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:LabelVal.V275.Views"
                xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             xmlns:json="clr-namespace:JSONViewer_WPF;assembly=JSONViewer_WPF"
             xmlns:ViewModels="clr-namespace:LabelVal.V275.ViewModels"  
             d:DataContext="{d:DesignInstance Type=ViewModels:NodeDetails}"
             mc:Ignorable="d">
    <ScrollViewer Style="{StaticResource MahApps.Styles.ScrollViewer}">

        <GroupBox Margin="3" Padding="3"
                          Style="{StaticResource MaterialDesignCardGroupBox}"
                    md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
                    md:ColorZoneAssist.Mode="Custom">
            
            <GroupBox.Header>
                <DockPanel Margin="-5">
                    <md:Card Background="{DynamicResource MahApps.Brushes.ThemeBackground}" HorizontalAlignment="Left" VerticalAlignment="Bottom" Padding="2,1">
                        <TextBlock Text="V275 JSON" FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"/>
                    </md:Card>

                    <Button Click="btnCloseDetails" Style="{StaticResource GroupHeaderCirlceButton}" ToolTip="Close" Margin="6,0,3,0" HorizontalAlignment="Right">
                        <iconPacks:Material Kind="Close" Height="16" Width="16"/>
                    </Button>
                </DockPanel>
            </GroupBox.Header>

            <StackPanel>
                <json:JsonViewer JSON="{Binding SelectedNode.Product}" HideButtons="True" Title="Product"/>
                <json:JsonViewer JSON="{Binding SelectedNode.Details}" HideButtons="True" Title="Device.Node"/>

                <json:JsonViewer JSON="{Binding SelectedNode.Inspection}" HideButtons="True" Title="Inspection" />
                <json:JsonViewer JSON="{Binding SelectedNode.Camera}" HideButtons="True" Title="Device.Camera" />

                <json:JsonViewer JSON="{Binding SelectedNode.ConfigurationCamera}" HideButtons="True" Title="Camera Configuration" />
                <json:JsonViewer JSON="{Binding SelectedNode.Calibration}" HideButtons="True" Title="Calibration" />
                <json:JsonViewer JSON="{Binding SelectedNode.Symbologies}" HideButtons="True" Title="Symbologies" />
            </StackPanel>
        </GroupBox>

    </ScrollViewer>
</UserControl>
