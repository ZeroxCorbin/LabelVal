<UserControl
    x:Class="LabelVal.V275.Views.V275Manager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.V275.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:LabelVal.V275.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:V275Manager}"
    mc:Ignorable="d">

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Height="68"
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48">
                    <Grid Height="42" Margin="3">
                        <Image
                            Width="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Source="/Assets/Images/v275-white-outline.ico" />
                        <Image
                            Width="20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Source="/Assets/Images/v275-white-outline.ico" />
                        <Image
                            Width="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Source="/Assets/Images/v275-white-outline.ico" />
                    </Grid>
                </DockPanel>

                <Border Style="{StaticResource imageBar}" />

                <DockPanel>
                    <DockPanel DockPanel.Dock="Top">

                        <DockPanel HorizontalAlignment="Left">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>

                            <TextBlock
                                Margin="6,0,0,3"
                                DockPanel.Dock="Top"
                                Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                Text="V275 Systems" />

                            <Border Style="{StaticResource imageBarHor}" />

                        </DockPanel>

                        <Button
                            Padding="8,0"
                            HorizontalAlignment="Right"
                            Click="btnCollapseContent"
                            Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                            Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                    </DockPanel>

                    <Button
                        Width="48"
                        HorizontalAlignment="Left"
                        Command="{Binding AddCommand}"
                        Content="{iconPacks:Material Kind=Plus,
                                                     Width=24,
                                                     Height=24}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="New V275 System" />
                </DockPanel>
            </DockPanel>
        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Style="{StaticResource groupLeft}" />
            <Border Style="{StaticResource groupBottom}" />

            <ItemsControl ItemsSource="{Binding Devices}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:NodeManager DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>

    </DockPanel>
</UserControl>
