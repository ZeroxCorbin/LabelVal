<UserControl
    x:Class="LabelVal.V275.Views.V275Manager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.V275.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:vm="clr-namespace:LabelVal.V275.ViewModels"
    d:DataContext="{d:DesignInstance Type=vm:V275Manager}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="..\..\Templates\SharedButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48" Background="{DynamicResource V275_Brush_Active}">
                    <Grid Height="42" Margin="3">
                        <Image
                            Width="20"
                            HorizontalAlignment="Left"
                            VerticalAlignment="Top"
                            Source="/Assets/Images/v275-white-outline.ico" />
                        <Image
                            Width="20"
                            HorizontalAlignment="Right"
                            VerticalAlignment="Top"
                            Source="/Assets/Images/v275-white-outline.ico" />
                        <Image
                            Width="20"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Bottom"
                            Source="/Assets/Images/v275-white-outline.ico" />
                    </Grid>
                </DockPanel>


                <DockPanel
                    Height="32"
                    HorizontalAlignment="Stretch"
                    DockPanel.Dock="Top">
                    <DockPanel.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Offset="0" Color="{DynamicResource V275}" />
                            <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                        </LinearGradientBrush>
                    </DockPanel.Background>

                    <TextBlock
                        Margin="6,0,6,3"
                        VerticalAlignment="Center"
                        Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                        Text="V275 Systems" />

                    <Button
                        Padding="8,0"
                        HorizontalAlignment="Right"
                        Click="btnCollapseContent"
                        Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                </DockPanel>


                <ToolBarTray>
                    <ToolBar Padding="0,3" ToolBarTray.IsLocked="True">
                        <Button
                            Width="48"
                            HorizontalAlignment="Left"
                            Command="{Binding AddCommand}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                            Style="{StaticResource ToolBarButton}"
                            ToolTip="New V275 System">
                            <DockPanel>
                                <TextBlock
                                    HorizontalAlignment="Center"
                                    DockPanel.Dock="Top"
                                    Text="Add"
                                    Visibility="{Binding AppSettings.ShowButtonText, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                <iconPacks:PackIconMaterial
                                    Width="24"
                                    Height="24"
                                    HorizontalAlignment="Center"
                                    VerticalAlignment="Center"
                                    Kind="Plus" />

                            </DockPanel>
                        </Button>
                    </ToolBar>
                </ToolBarTray>
            </DockPanel>
        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Background="{DynamicResource V275_Brush_Active}" Style="{StaticResource groupLeft}" />
            <Border Background="{DynamicResource V275_Brush_Active}" Style="{StaticResource groupBottom}" />

            <ItemsControl ItemsSource="{Binding Devices}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <local:NodeManager DataContext="{Binding}" />
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>

    </DockPanel>
</UserControl>
