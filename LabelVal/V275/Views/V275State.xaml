<UserControl
    x:Class="LabelVal.V275.Views.V275State"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.V275.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelVal.V275.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:V275}"
    mc:Ignorable="d">

    <GroupBox
        Margin="3"
        Padding="3"
        HorizontalAlignment="Left"
        VerticalAlignment="Top"
        md:ColorZoneAssist.Background="{DynamicResource MahApps.Brushes.Accent4}"
        md:ColorZoneAssist.Mode="Custom"
        BorderThickness="0"
        Style="{StaticResource MaterialDesignCardGroupBox}">

        <GroupBox.Header>
            <DockPanel Margin="-5">
                <md:Card
                    Padding="1"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Bottom"
                    Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
                    <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="V275 State" />
                </md:Card>
            </DockPanel>
        </GroupBox.Header>

        <md:Card Padding="2" Background="{DynamicResource MahApps.Brushes.ThemeBackground}">

            <DockPanel>
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedNode.IsLoggedIn}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <Label Content="Template:" />

                <Label>
                    <Label.Style>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                            <Setter Property="Content" Value="{Binding SelectedNode.JobName}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IsWrongTemplateName}" Value="False">
                                    <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedNode.JobName}" Value="">
                                    <Setter Property="Content" Value="-----" />
                                    <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>

                <Label Content="State:" />

                <Label Content="{Binding SelectedNode.State}">
                    <Label.Style>
                        <Style TargetType="{x:Type Label}">
                            <Setter Property="Background" Value="{DynamicResource SectorError_Brush}" />
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedNode.State}" Value="Editing" />
                                        <Condition Binding="{Binding SelectedImageRoll.IsGS1}" Value="True" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                </MultiDataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedNode.State}" Value="Running" />
                                        <Condition Binding="{Binding SelectedImageRoll.IsGS1}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Background" Value="{DynamicResource CB_Green}" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Label.Style>
                </Label>

                <Button
                    Margin="3,0"
                    Command="{Binding V275_SwitchRunCommand}"
                    Content="Run">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedNode.IsLoggedIn_Control}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedNode.State}" Value="Editing">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding MainWindow.ImageResultsDatabase.SelectedImageRoll.IsGS1}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Margin="3,0"
                    Command="{Binding V275_SwitchEditCommand}"
                    Content="Edit">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedNode.IsLoggedIn_Control}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedNode.State}" Value="Running">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedNode.State}" Value="Paused">
                                    <Setter Property="IsEnabled" Value="True" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Margin="3,0"
                    Command="{Binding SelectedNode.RemoveRepeatCommand}"
                    Content="Remove">
                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="{x:Type Button}">
                            <Setter Property="IsEnabled" Value="False" />
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding SelectedNode.IsLoggedIn_Control}" Value="True" />
                                        <Condition Binding="{Binding SelectedNode.State}" Value="Paused" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Setter Property="IsEnabled" Value="True" />
                                </MultiDataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </DockPanel>

        </md:Card>

    </GroupBox>
</UserControl>
