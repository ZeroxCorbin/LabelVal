<UserControl
    x:Class="LabelVal.V275.Views.NodeManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.V275.ViewModels"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:loc="clr-namespace:LabelVal.Localization"
    xmlns:local="clr-namespace:LabelVal.V275.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:NodeManager}"
    mc:Ignorable="d">

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Height="68"
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48" Background="{DynamicResource V275_Brush_Active}">
                    <Image
                        Width="36"
                        Height="36"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Source="/Assets/Images/v275-white-outline.ico" />
                </DockPanel>

                <Border Style="{StaticResource imageBar}" />

                <DockPanel>

                    <DockPanel DockPanel.Dock="Top">

                        <DockPanel HorizontalAlignment="Left">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>

                            <TextBlock Margin="6,0,0,3" DockPanel.Dock="Top">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}" TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}:{1}">
                                                    <Binding Path="Host" />
                                                    <Binding Path="SystemPort" />
                                                </MultiBinding>

                                            </Setter.Value>
                                        </Setter>

                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>

                            <Border Style="{StaticResource imageBarHor}" />

                        </DockPanel>

                        <!--<Button Click="btnCollapseContent" Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                VerticalAlignment="Top" HorizontalAlignment="Right" Margin="3"
                                Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"/>-->

                    </DockPanel>

                    <Button
                        Width="48"
                        Click="btnShowSettings_Click"
                        Content="{iconPacks:Material Kind=Cog,
                                                     Width=24,
                                                     Height=24}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="{loc:Loc Settings}" />

                    <Button
                        Width="48"
                        Command="{Binding GetDevicesCommand}"
                        Content="{iconPacks:Modern Kind=Refresh,
                                                   Width=24,
                                                   Height=24}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="{loc:Loc Refresh}" />

                    <Button
                        Width="48"
                        HorizontalAlignment="Left"
                        Click="btnOpenInBrowser_Click"
                        Content="{iconPacks:Modern Kind=Browser,
                                                   Width=24,
                                                   Height=24}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}" />

                    <Button
                        Width="48"
                        HorizontalAlignment="Right"
                        Click="btnShowDetails_Click"
                        Content="{iconPacks:Material Kind=CodeJson,
                                                     Width=24,
                                                     Height=24}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="{loc:Loc Details}" />

                </DockPanel>
            </DockPanel>
        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Style="{StaticResource groupLeft}" />
            <Border Style="{StaticResource groupBottom}" />

            <md:DrawerHost x:Name="drwSettings" DrawerClosing="drwSettings_DrawerClosing">

                <md:DrawerHost.TopDrawerContent>

                    <md:Card
                        Margin="3"
                        Padding="2"
                        HorizontalAlignment="Center"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
                        <md:Card.Style>
                            <Style TargetType="{x:Type md:Card}">
                                <Setter Property="Visibility" Value="Collapsed" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding Path=IsTopDrawerOpen, ElementName=drwSettings}" Value="True">
                                        <Setter Property="Visibility" Value="Visible" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </md:Card.Style>

                        <DockPanel>
                            <DockPanel Margin="3" DockPanel.Dock="Top">

                                <TextBox
                                    MinWidth="50"
                                    Margin="3,0"
                                    HorizontalAlignment="Center"
                                    md:HintAssist.FloatingHintHorizontalAlignment="Left"
                                    md:HintAssist.Hint="IP Address"
                                    md:HintAssist.IsFloating="True"
                                    md:TextFieldAssist.HasClearButton="True"
                                    Text="{Binding Host}">

                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBox
                                    MinWidth="50"
                                    Margin="3,0"
                                    HorizontalContentAlignment="Center"
                                    md:HintAssist.FloatingHintHorizontalAlignment="Left"
                                    md:HintAssist.Hint="Port"
                                    md:HintAssist.IsFloating="True"
                                    md:TextFieldAssist.HasClearButton="True"
                                    Text="{Binding SystemPort}">
                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBox
                                    MinWidth="50"
                                    Margin="3,0"
                                    HorizontalContentAlignment="Center"
                                    md:HintAssist.FloatingHintHorizontalAlignment="Left"
                                    md:HintAssist.Hint="User name"
                                    md:HintAssist.IsFloating="True"
                                    Text="{Binding Username}">
                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <TextBox
                                    MinWidth="50"
                                    Margin="3,0"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Center"
                                    md:HintAssist.FloatingHintHorizontalAlignment="Left"
                                    md:HintAssist.Hint="Password"
                                    md:HintAssist.IsFloating="True"
                                    Text="{Binding Password}">
                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                            </DockPanel>

                            <DockPanel Margin="3">

                                <StackPanel>
                                    <TextBlock
                                        Margin="3,2"
                                        HorizontalAlignment="Left"
                                        VerticalAlignment="Center"
                                        Foreground="{DynamicResource MahApps.Brushes.Text}"
                                        Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                                        Text="Simulator Mode" />
                                    <ToggleButton
                                        Width="36"
                                        Height="36"
                                        Margin="3,0"
                                        HorizontalAlignment="Center"
                                        IsChecked="{Binding UseSimulationDirectory}">
                                        <ToggleButton.Style>
                                            <Style BasedOn="{StaticResource MahApps.Styles.ToggleButton}" TargetType="{x:Type ToggleButton}">
                                                <Setter Property="IsEnabled" Value="True" />
                                                <Setter Property="Content" Value="{iconPacks:Material Kind=Api}" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                        <Setter Property="IsEnabled" Value="False" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding UseSimulationDirectory}" Value="True">
                                                        <Setter Property="Content" Value="{iconPacks:Material Kind=SubdirectoryArrowLeft}" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ToggleButton.Style>
                                    </ToggleButton>
                                </StackPanel>


                                <TextBox
                                    Height="48"
                                    MaxWidth="220"
                                    Margin="3,0"
                                    HorizontalAlignment="Left"
                                    HorizontalContentAlignment="Left"
                                    md:HintAssist.FloatingHintHorizontalAlignment="Left"
                                    md:HintAssist.Hint="Simulator Image Directory"
                                    md:HintAssist.IsFloating="True"
                                    md:TextFieldAssist.HasClearButton="True"
                                    Text="{Binding SimulatorImageDirectory, UpdateSourceTrigger=PropertyChanged}"
                                    TextWrapping="Wrap">
                                    <TextBox.Style>
                                        <Style BasedOn="{StaticResource MaterialDesignFloatingHintTextBox}" TargetType="{x:Type TextBox}">
                                            <Setter Property="IsEnabled" Value="True" />
                                            <Setter Property="md:HintAssist.FloatingOffset" Value="0,-20" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding Manager.SelectedDevice.Controller.IsLoggedIn}" Value="True">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                                <DataTrigger Binding="{Binding UseSimulationDirectory}" Value="False">
                                                    <Setter Property="IsEnabled" Value="False" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </TextBox.Style>
                                </TextBox>

                                <Button
                                    HorizontalAlignment="Right"
                                    VerticalAlignment="Bottom"
                                    Command="{Binding Manager.DeleteCommand}"
                                    CommandParameter="{Binding}"
                                    Content="{iconPacks:Material Kind=Delete}"
                                    Style="{StaticResource GroupHeaderCirlceButton}"
                                    ToolTip="Delete this device?" />

                            </DockPanel>
                        </DockPanel>
                    </md:Card>

                </md:DrawerHost.TopDrawerContent>

                <ListView
                    Margin="3,3,0,0"
                    ItemsSource="{Binding Nodes}"
                    SelectedItem="{Binding Manager.SelectedDevice}"
                    Style="{StaticResource MahApps.Styles.ListView}">

                    <ListView.ItemContainerStyle>
                        <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem" />
                    </ListView.ItemContainerStyle>

                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <local:NodeItem />
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

            </md:DrawerHost>
        </DockPanel>
    </DockPanel>
</UserControl>
