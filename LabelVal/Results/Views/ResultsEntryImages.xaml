<UserControl
    x:Class="LabelVal.Results.Views.ResultsEntryImages"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:viewModels="clr-namespace:LabelVal.Results.ViewModels"
    d:DataContext="{d:DesignInstance Type=viewModels:ResultsEntry,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ImageDetailsTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>

    </UserControl.Resources>

    <DockPanel>

        <!--  Source Image  -->
        <DockPanel>

            <md:Card
                x:Name="CrdSource"
                Margin="3,3,0,0"
                HorizontalAlignment="Left"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel>

                    <DockPanel Background="Teal">
                        <iconPacks:PackIconMaterial
                            Width="12"
                            Margin="3"
                            VerticalAlignment="Center"
                            Kind="FilmstripBox" />
                    </DockPanel>

                    <!--  Title  -->
                    <md:Card
                        Margin="3,3,0,3"
                        Padding="4,1"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
                        <TextBlock
                            FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"
                            Foreground="{DynamicResource MahApps.Brushes.Text}"
                            Text="Source Image" />
                    </md:Card>

                    <Border Margin="3,0" Style="{StaticResource imageBar}" />

                    <!--  Save Image  -->
                    <Button
                        Width="28"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{Binding SourceImage.BitmapBytes}"
                        Content="{iconPacks:Material Kind=ContentSave}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="Save the image." />

                </DockPanel>

            </md:Card>

            <!--  Images  -->
            <DockPanel
                Margin="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Black">

                <!--  Images  -->
                <Grid
                    MaxWidth="{Binding ImagesMaxHeight}"
                    MaxHeight="{Binding ImagesMaxHeight}"
                    Margin="3"
                    ContextMenuOpening="SourceImage_ContextMenuOpening"
                    MouseDown="SourceImage_MouseDown">

                    <Image
                        x:Name="SourceImage"
                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                        Source="{Binding SourceImage.ImageLow, Mode=OneTime}" />

                    <Image
                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                        Source="{Binding PrinterAreaOverlay, Mode=OneWay}"
                        Stretch="None" />

                    <Label
                        Margin="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <Label.Style>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid Background="White">
                                            <iconPacks:PackIconMaterial
                                                Width="20"
                                                Height="20"
                                                Foreground="Red"
                                                Kind="Information" />
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ToolTip" Value="{Binding SourceImage.Comment}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SourceImage.Comment}" Value="{x:Null}">
                                        <Setter Property="Content" Value="" />
                                        <Setter Property="ToolTip" Value="{x:Null}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>

                    </Label>
                </Grid>

            </DockPanel>

        </DockPanel>

        <!--  Details  -->
        <ContentControl Content="{Binding SourceImage}" ContentTemplate="{StaticResource imageDetailsTemplate}">
            <ContentControl.Style>
                <Style TargetType="ContentControl">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding ShowDetails}" Value="True" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Visible" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </DockPanel>
</UserControl>
