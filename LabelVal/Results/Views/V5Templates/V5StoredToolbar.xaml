<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bar_common="clr-namespace:BarcodeVerification.lib.Common;assembly=BarcodeVerification.lib"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Results.Views"
    xmlns:vm="clr-namespace:LabelVal.Results.ViewModels">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Shared/ResultsToolbarShared.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Stored Toolbar (V5)  -->
    <DockPanel x:Key="V5StoredToolbar" x:Shared="False">


        <!--  Image Only: Save stored image  -->
        <Button
            Command="{Binding ResultsEntry.SaveCommand}"
            CommandParameter="{Binding StoredImage.BitmapBytes}"
            Style="{StaticResource SaveImageButtonStyle}">
            <Button.ToolTip>Save the stored image to a file.</Button.ToolTip>
        </Button>

        <!--  Both: Copy  -->
        <Button
            Command="{Binding CopyToClipboardCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V5}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Content="{iconPacks:Modern Kind=PageCopy}">
            <Button.Style>
                <Style BasedOn="{StaticResource ResultsToolbarButtonBase}" TargetType="Button">
                    <Setter Property="Tag" Value="{Binding StoredSectors}" />
                    <Setter Property="ToolTip" Value="Copy the sectors to the clipboard as CSV." />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                            <Setter Property="Tag" Value="{Binding StoredImage}" />
                            <Setter Property="ToolTip" Value="Copy the image to the clipboard as a bitmap." />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <Button
            Command="{Binding Show3DImageCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V5}}"
            CommandParameter="{Binding StoredImage.BitmapBytes}"
            Style="{StaticResource Show3DViewerButtonStyle}" />

        <!--  Sectors Only: Load (device online & Tag != Image)  -->
        <DockPanel>
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Handler}" Value="{x:Static bar_common:LabelHandlers.Offline}">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>

            <Button
                Command="{Binding LoadCommand}"
                Content="{iconPacks:Material Kind=Download}"
                Style="{StaticResource ResultsToolbarButtonBase}"
                ToolTip="Overwrite the template sectors with the stored data from the database." />

            <Border Margin="1,0" Style="{StaticResource imageBar}" />
        </DockPanel>

        <!--  Sectors Only: Show All  -->
        <Button
            Command="{Binding ShowStoredSectorsCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V5}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Style="{StaticResource ShowAllButtonStyle}" />

        <!--  Sectors Only: JSON  -->
        <Button
            Command="{Binding ShowStoredSectorsCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V5}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Style="{StaticResource JsonButtonStyle}" />

        <!--  Image Only: Delete stored (with separator)  -->
        <DockPanel>
            <DockPanel.Style>
                <Style TargetType="DockPanel">
                    <Setter Property="Visibility" Value="Visible" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Sectors">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ResultsManagerView.SelectedResultsDatabase.IsLocked}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>

            <Border Margin="1,0" Style="{StaticResource imageBar}" />

            <Button Command="{Binding ClearStoredCommand}" Style="{StaticResource DeleteStoredButtonStyle}" />
        </DockPanel>
    </DockPanel>
</ResourceDictionary>