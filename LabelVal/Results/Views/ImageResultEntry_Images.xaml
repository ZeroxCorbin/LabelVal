<UserControl
    x:Class="LabelVal.Results.Views.ImageResultEntry_Images"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:LabelVal.Converters"
    xmlns:ViewModels="clr-namespace:LabelVal.Results.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:ImageResultEntry}"
    mc:Ignorable="d">

    <UserControl.Resources>

        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ImageDetailsTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <Converters:Double2String x:Key="double2String" />

            <ContextMenu x:Key="cmImageModify">
                <MenuItem Command="{Binding RedoFiducial}" Header="Registration Mark" />
            </ContextMenu>
        </ResourceDictionary>


    </UserControl.Resources>

    <DockPanel>
        <DockPanel.Style>
            <Style TargetType="DockPanel">
                <Setter Property="Visibility" Value="Visible" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding IsPlaceholder}" Value="True">
                        <Setter Property="Visibility" Value="Collapsed" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Style>

        <!--  Source Image  -->
        <DockPanel>

            <md:Card
                x:Name="crdSource"
                Margin="3,3,0,0"
                HorizontalAlignment="Left"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel>

                    <!--  Title  -->
                    <md:Card
                        Margin="3"
                        Padding="4,1"
                        HorizontalAlignment="Left"
                        Background="{DynamicResource MahApps.Brushes.ThemeBackground}">
                        <TextBlock
                            FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}"
                            Foreground="{DynamicResource MahApps.Brushes.Text}"
                            Text="Source Image" />
                    </md:Card>

                    <Border Margin="3,0" Style="{StaticResource imageBar}" />

                    <!--  Save Image  -->
                    <Button
                        Width="28"
                        Command="{Binding SaveCommand}"
                        Content="{iconPacks:Material Kind=ContentSave}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="Save the image." />

                    <!--<Border Style="{StaticResource imageBar}" Margin="3,0"/>-->

                    <!--<TextBlock VerticalAlignment="Center" Text="{Binding SourceImageUID, Converter={StaticResource shortenUID}}"
                           ToolTip="{Binding SourceImageUID}" Margin="3,0"/>-->

                </DockPanel>

            </md:Card>

            <!--  Images  -->
            <DockPanel
                Margin="3"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Background="Black">

                <!--  Images  -->
                <Grid
                    MaxWidth="{Binding ImagesMaxHeight}"
                    MaxHeight="{Binding ImagesMaxHeight}"
                    Margin="3"
                    ContextMenu="{StaticResource cmImageModify}"
                    ContextMenuOpening="SourceImage_ContextMenuOpening"
                    MouseDown="SourceImage_MouseDown">

                    <Image
                        x:Name="SourceImage"
                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                        Source="{Binding SourceImage.ImageLow, Mode=OneTime}" />

                    <Image
                        RenderOptions.BitmapScalingMode="NearestNeighbor"
                        Source="{Binding PrinterAreaOverlay, Mode=OneWay}"
                        Stretch="None" />

                    <Label
                        Margin="3"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Top">
                        <Label.Style>
                            <Style TargetType="{x:Type Label}">
                                <Setter Property="Content">
                                    <Setter.Value>
                                        <Grid Background="White">
                                            <iconPacks:PackIconMaterial
                                                Width="20"
                                                Height="20"
                                                Foreground="Red"
                                                Kind="Information" />
                                        </Grid>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="ToolTip" Value="{Binding SourceImage.Comment}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding SourceImage.Comment}" Value="{x:Null}">
                                        <Setter Property="Content" Value="" />
                                        <Setter Property="ToolTip" Value="{x:Null}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Label.Style>

                    </Label>
                </Grid>

            </DockPanel>

        </DockPanel>

        <!--  Details  -->
        <ContentControl Content="{Binding SourceImage}" ContentTemplate="{StaticResource imageDetailsTemplate}" />

    </DockPanel>
</UserControl>
