<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Results.Views"
    xmlns:vm="clr-namespace:LabelVal.Results.ViewModels">

    <ResourceDictionary.MergedDictionaries>
        <ResourceDictionary Source="../Shared/ResultsToolbarShared.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <!--  Current Toolbar (V275)  -->
    <DockPanel x:Key="V275CurrentToolbar" x:Shared="False">

        <!--  Image Only: Save  -->
        <Button
            Command="{Binding ResultsEntry.SaveCommand}"
            CommandParameter="{Binding CurrentImage.BitmapBytes}"
            Style="{StaticResource SaveImageButtonStyle}">
            <Button.ToolTip>Save the current image to a file.</Button.ToolTip>
        </Button>

        <!--  Sectors Only: Store (with DB lock trigger and original parameter)  -->
        <Button Command="{Binding StoreCommand}" CommandParameter="{x:Static vm:ResultsEntryDevices.V275}">
            <Button.Style>
                <Style BasedOn="{StaticResource StoreButtonStyle}" TargetType="Button">
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultsEntry.SelectedResultsDatabase.IsLocked}" Value="True">
                            <Setter Property="Visibility" Value="Collapsed" />
                        </DataTrigger>
                        <!--  StoreButtonStyle already collapses when Tag=Image  -->
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!--  Sectors Only: Read (visibility logic per original)  -->
        <Button Command="{Binding ReadCommand}">
            <Button.Style>
                <Style BasedOn="{StaticResource ReadButtonStyle}" TargetType="Button">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding ResultsManagerView.SelectedV275Node.Controller.IsLoggedIn_Monitor}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <DataTrigger Binding="{Binding ResultsManagerView.SelectedV275Node.Controller.IsLoggedIn_Control}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                        <MultiDataTrigger>
                            <MultiDataTrigger.Conditions>
                                <Condition Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image" />
                                <Condition Binding="{Binding CurrentSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False" />
                            </MultiDataTrigger.Conditions>
                            <Setter Property="Visibility" Value="Collapsed" />
                        </MultiDataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!--  Sectors-only separator  -->
        <ContentControl ContentTemplate="{StaticResource SectorsOnlySeparator}" />

        <!--  Both: Copy  -->
        <Button
            Command="{Binding CopyToClipboardCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_L95}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Content="{iconPacks:Modern Kind=PageCopy}">
            <Button.Style>
                <Style BasedOn="{StaticResource ResultsToolbarButtonBase}" TargetType="Button">
                    <Setter Property="Tag" Value="{Binding CurrentSectors}" />
                    <Setter Property="ToolTip" Value="Copy the sectors to the clipboard as CSV." />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                            <Setter Property="Tag" Value="{Binding CurrentImage}" />
                            <Setter Property="ToolTip" Value="Copy the image to the clipboard as a bitmap." />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </Button.Style>
        </Button>

        <!--  Sectors Only: Show All  -->
        <Button
            Command="{Binding ShowCurrentSectorsCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V275}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Style="{StaticResource ShowAllButtonStyle}" />

        <!--  Sectors Only: JSON  -->
        <Button
            Command="{Binding ShowCurrentSectorsCommand, RelativeSource={RelativeSource AncestorType=local:ResultsDeviceEntry_V275}}"
            CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
            Style="{StaticResource JsonButtonStyle}" />

        <!--  Image-only separator  -->
        <ContentControl ContentTemplate="{StaticResource ImageOnlySeparator}" />

        <!--  Image Only: Clear  -->
        <Button
            Command="{Binding ClearCurrentCommand}"
            CommandParameter="{x:Static vm:ResultsEntryDevices.V275}"
            Style="{StaticResource ClearImageButtonStyle}" />
    </DockPanel>
</ResourceDictionary>