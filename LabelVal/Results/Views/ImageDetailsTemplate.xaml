<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:image="clr-namespace:LabelVal.ImageRolls.ViewModels"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

    <converters:ShortenUIDConverter x:Key="shortenUID" />
    <converters:ObjectIsNull x:Key="objectIsNull" />
    <converters:Double2String x:Key="double2String" />


    <DataTemplate x:Key="imageDetailsTemplate" DataType="{x:Type image:ImageEntry}">
        <DockPanel VerticalAlignment="Top">
            <DockPanel.Style>
                <Style TargetType="{x:Type DockPanel}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding Path=DataContext.ShowDetails, RelativeSource={RelativeSource AncestorType=UserControl}}" Value="True">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </DockPanel.Style>

            <!--  Image Details  -->
            <md:Card
                x:Name="crdSource"
                Margin="0,3,0,0"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel>

                    <DockPanel Margin="0,3,0,0" DockPanel.Dock="Top">
                        <TextBox
                            HorizontalContentAlignment="Center"
                            md:HintAssist.Hint="Total Pixels"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ImageTotalPixels, Mode=OneWay}" />
                    </DockPanel>

                    <DockPanel
                        Margin="3,0"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top">

                        <TextBox
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint="W"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Image.PixelWidth, Mode=OneWay}" />

                        <TextBox
                            Margin="-6,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint="Pixels"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="X" />

                        <TextBox
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint="H"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Image.PixelHeight, Mode=OneWay}" />

                    </DockPanel>

                    <DockPanel
                        Margin="3,0"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top">

                        <TextBox
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint=""
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Image.DpiX, Mode=OneWay, StringFormat=N, Converter={StaticResource double2String}}" />

                        <TextBox
                            Margin="0,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint="DPI"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="X" />

                        <TextBox
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint=""
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Image.DpiY, Mode=OneWay, StringFormat=N, Converter={StaticResource double2String}}" />
                    </DockPanel>

                    <DockPanel
                        Margin="3,0"
                        HorizontalAlignment="Center"
                        DockPanel.Dock="Top">

                        <TextBox
                            HorizontalAlignment="Left"
                            HorizontalContentAlignment="Left"
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint=""
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ImageWidth, Mode=OneWay, StringFormat=N2}" />

                        <TextBox
                            Margin="-8,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint="Inches"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="X" />

                        <TextBox
                            md:HintAssist.FloatingHintHorizontalAlignment="Center"
                            md:HintAssist.Hint=""
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ImageHeight, Mode=OneWay, StringFormat=N2}" />

                    </DockPanel>

                    <DockPanel Margin="0,3,0,0" DockPanel.Dock="Top">
                        <TextBox
                            HorizontalContentAlignment="Center"
                            md:HintAssist.Hint="Bit Depth"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding ImageBitDepth, Mode=OneWay}" />
                    </DockPanel>

                </DockPanel>

            </md:Card>

            <md:Card
                Margin="0,3,0,0"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel Margin="3">

                    <DockPanel DockPanel.Dock="Top">

                        <TextBox
                            Margin="3,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Left"
                            md:HintAssist.Hint="Source Hash"
                            BorderThickness="0"
                            DockPanel.Dock="Top"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Path=DataContext.SourceImage.UID, RelativeSource={RelativeSource AncestorType=UserControl}, Converter={StaticResource shortenUID}}" />

                        <TextBox
                            Margin="3,0"
                            HorizontalContentAlignment="Center"
                            md:HintAssist.FloatingHintHorizontalAlignment="Left"
                            md:HintAssist.Hint="This Hash"
                            BorderThickness="0"
                            IsHitTestVisible="False"
                            Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                            Text="{Binding Path=UID, Converter={StaticResource shortenUID}}" />
                    </DockPanel>

                </DockPanel>

            </md:Card>


