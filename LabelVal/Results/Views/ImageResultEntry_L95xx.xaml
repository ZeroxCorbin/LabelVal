<UserControl
    x:Class="LabelVal.Results.Views.ImageResultEntry_L95xx"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:LabelVal.Converters"
    xmlns:V275Converters="clr-namespace:LabelVal.V275.Converters"
    xmlns:ViewModels="clr-namespace:LabelVal.Results.ViewModels"
    xmlns:componentmodel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.Results.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:sectors="clr-namespace:LabelVal.Sectors.Views"
    d:DataContext="{d:DesignInstance Type=ViewModels:ImageResultEntry,
                                     IsDesignTimeCreatable=False}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="ImageDetailsTemplate.xaml" />
            </ResourceDictionary.MergedDictionaries>


            <DockPanel x:Key="L95Stored_Toolbar" x:Shared="False">
                <Border Margin="3,0" Style="{StaticResource imageBar}" />

                <!--  Image Only  -->
                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Sectors">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <!--  Save Image  -->
                    <Button
                        Width="28"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{x:Static ViewModels:ImageResultEntryImageTypes.L95xxStored}"
                        Content="{iconPacks:Material Kind=ContentSave}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="Save the image." />

                </DockPanel>

                <!--  Both  -->
                <Button
                    Width="28"
                    Click="btnCopySectorsCsvToClipboard_Click"
                    Content="{iconPacks:Modern Kind=PageCopy}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Tag" Value="{Binding L95xxStoredSectors}" />
                            <Setter Property="ToolTip" Value="Copy the sectors as DelimeterSV.&#x0a;Hold Shift for XLS." />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Tag" Value="{Binding L95xxStoredImage}" />
                                    <Setter Property="ToolTip" Value="Copy the image to the clipboard and PNG.&#x0a;Hold Shift for BMP." />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Sectors Only  -->
                <Button
                    Width="28"
                    Click="L95xxStoredSectors_Click"
                    Content="{iconPacks:Modern Kind=Eye}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                    ToolTip="The all seeing eye! Click it...&#x0a;Hold Shift and click for more.">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Image Only  -->
                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Sectors">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedDatabase.IsLocked}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <Border Margin="3,0" Style="{StaticResource imageBar}" />

                    <Button
                        Width="28"
                        Command="{Binding ClearStoredCommand}"
                        CommandParameter="{x:Static ViewModels:ImageResultEntryDevices.L95xx}"
                        Content="{iconPacks:Modern Kind=Delete}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="Remove the stored sectors from the database, permanently.&#x0a;(CAUTION) This can not be undone!" />

                </DockPanel>

            </DockPanel>

            <!--  Current Toolbar  -->
            <DockPanel x:Key="L96Current_Toolbar" x:Shared="False">

                <Border Margin="3,0" Style="{StaticResource imageBar}" />

                <!--  Image Only  -->
                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Sectors">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <Button
                        Width="28"
                        Command="{Binding SaveCommand}"
                        CommandParameter="{x:Static ViewModels:ImageResultEntryImageTypes.L95xxCurrent}"
                        Content="{iconPacks:Material Kind=ContentSave}"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                        Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                        ToolTip="Save the image." />

                </DockPanel>

                <!--  Sectors Only  -->
                <Button
                    Width="28"
                    Command="{Binding StoreCommand}"
                    CommandParameter="{x:Static ViewModels:ImageResultEntryDevices.L95xxAll}"
                    Content="{iconPacks:Material Kind=StorePlusOutline}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                    ToolTip="Store the current sectors and images to the database.">

                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedDatabase.IsLocked}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <!--  Sectors Only  -->
                <Button
                    Width="28"
                    Command="{Binding StoreCommand}"
                    CommandParameter="{x:Static ViewModels:ImageResultEntryDevices.L95xx}"
                    Content="{iconPacks:Material Kind=ChevronDoubleLeft}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                    ToolTip="Store the selected sector to the database.">

                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedDatabase.IsLocked}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding L95xxCurrentSectorSelected, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>

                <Button
                    Width="28"
                    Command="{Binding ClearReadCommand}"
                    CommandParameter="{x:Static ViewModels:ImageResultEntryDevices.L95xx}"
                    Content="{iconPacks:MaterialDesign Kind=Clear}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                    ToolTip="Clear the selected sector.">

                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Setter Property="IsEnabled" Value="True" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding L95xxCurrentSectorSelected, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                    <Setter Property="IsEnabled" Value="False" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>


                <!--  Sectors Only  -->
                <Button
                    Width="28"
                    Command="{Binding L95xxReadCommand}"
                    Content="{iconPacks:Material Kind=Upload}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                    ToolTip="Read the last results and image from the V275.&#x0a;Just reads the data. No processing.">

                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding ImageResults.SelectedVerifier.Controller.IsConnected}" Value="True">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <MultiDataTrigger>
                                    <MultiDataTrigger.Conditions>
                                        <Condition Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image" />
                                        <Condition Binding="{Binding L95xxCurrentSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False" />
                                    </MultiDataTrigger.Conditions>
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </MultiDataTrigger>

                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>


                <DockPanel>
                    <DockPanel.Style>
                        <Style TargetType="{x:Type DockPanel}">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <Border Margin="3,0" Style="{StaticResource imageBar}" />

                </DockPanel>

                <!--  Both  -->
                <Button
                    Width="28"
                    Click="btnCopySectorsCsvToClipboard_Click"
                    Content="{iconPacks:Modern Kind=PageCopy}"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">
                    <Button.Style>
                        <Style BasedOn="{StaticResource MahApps.Styles.Button.Hamburger}" TargetType="{x:Type Button}">
                            <Setter Property="Tag" Value="{Binding L95xxCurrentSectors}" />
                            <Setter Property="ToolTip" Value="Copy the sectors as DelimeterSV;Hold Shift for XLS." />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Path=Tag, RelativeSource={RelativeSource AncestorType=ContentControl}}" Value="Image">
                                    <Setter Property="Tag" Value="{Binding L95xxCurrentImage}" />
                                    <Setter Property="ToolTip" Value="Copy the image to the clipboard and PNG.&#x0a;Hold Shift for BMP." />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>



                <Button
                    Width="28"
                    Click="L95xxCurrentSectorDetails_Click"
                    Content="{iconPacks:Modern Kind=Eye}"
                    Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                    ToolTip="The all seeing eye! Click it...&#x0a;Hold Shift and click for more." />


            </DockPanel>

        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel MaxHeight="800">
        <DockPanel.Style>
            <Style TargetType="DockPanel">
                <Setter Property="Visibility" Value="Collapsed" />
                <Style.Triggers>
                    <DataTrigger Binding="{Binding L95xxStoredSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>

                    <DataTrigger Binding="{Binding L95xxCurrentSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                        <Setter Property="Visibility" Value="Visible" />
                    </DataTrigger>
                </Style.Triggers>
            </Style>
        </DockPanel.Style>

        <Border Background="{DynamicResource L95xx_Brush}" Style="{StaticResource groupLeft}" />

        <Border Background="{DynamicResource L95xx_Brush}" Style="{StaticResource groupBottom}" />



        <!--  L95xx Stored  -->
        <DockPanel>

            <!--  L95xx Stored Image  -->
            <DockPanel DockPanel.Dock="Top">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding L95xxStoredImage, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <md:Card
                    Margin="3,3,0,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                    DockPanel.Dock="Top"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                    <DockPanel>

                        <!--  Title  -->
                        <md:Card
                            Margin="3"
                            Padding="4,1"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource L95xx_Brush}">
                            <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Stored Image" />
                        </md:Card>

                        <ContentControl Content="{StaticResource L95Stored_Toolbar}" Tag="Image" />


                    </DockPanel>

                </md:Card>

                <DockPanel
                    Margin="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Black">

                    <Grid
                        MaxWidth="{Binding ImagesMaxHeight}"
                        MaxHeight="{Binding ImagesMaxHeight}"
                        Margin="3"
                        MouseDown="L95xxStoredImage_MouseDown">

                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{Binding L95xxStoredImage.ImageLow, Mode=OneWay}" />

                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{Binding L95xxStoredImageOverlay, Mode=OneWay}" />

                    </Grid>

                </DockPanel>

            </DockPanel>

            <!--  L95xx Stored Sectors  -->
            <DockPanel HorizontalAlignment="Left">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding L95xxStoredSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <md:Card
                    Margin="3,3,0,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                    DockPanel.Dock="Top"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                    <StackPanel>
                        <DockPanel>

                            <!--  Title  -->
                            <md:Card
                                Margin="3"
                                Padding="4,1"
                                HorizontalAlignment="Left"
                                Background="{DynamicResource L95xx_Brush}">
                                <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Stored Sectors" />
                            </md:Card>

                            <ContentControl Content="{StaticResource L95Stored_Toolbar}" Tag="Sectors" />

                        </DockPanel>

                        <TextBlock
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                            Text="{Binding L95xxStoredSectors[0].Version}" />
                    </StackPanel>
                </md:Card>

                <DockPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                    <DockPanel.Style>
                        <Style TargetType="DockPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding L95xxFocusedStoredSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <md:Card
                        Margin="0,0,0,3"
                        HorizontalAlignment="Right"
                        Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                        DockPanel.Dock="Top"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                        <DockPanel>

                            <DockPanel Height="26.62" />

                            <Button
                                Width="28"
                                Click="btnSaveImage_Click"
                                Content="{iconPacks:Material Kind=ContentSave}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Save as image." />

                            <Button
                                Width="28"
                                Click="btnCopyImage_Click"
                                Content="{iconPacks:MaterialDesign Kind=Image}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Copy image to clipboard as PNG." />

                            <Button
                                Width="28"
                                Command="{Binding L95xxFocusedStoredSector.CopyToClipBoardCommand}"
                                CommandParameter="{Binding SourceImage.Order}"
                                Content="{iconPacks:Material Kind=ContentCopy}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Copy sector to CSV." />

                            <Button
                                Width="28"
                                Click="btnCloseDetails_Click"
                                Content="{iconPacks:MaterialDesign Kind=Close}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                Tag="l95xxStored"
                                ToolTip="Close this." />

                        </DockPanel>
                    </md:Card>
                </DockPanel>

                <ScrollViewer
                    x:Name="ScrollL95xxStoredSectors"
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    ScrollChanged="ScrollL95xxStoredSectors_ScrollChanged"
                    VerticalScrollBarVisibility="Auto">

                    <DockPanel>

                        <ListBox
                            Padding="0,1,0,0"
                            DockPanel.Dock="Top"
                            ItemsSource="{Binding L95xxStoredSectors}"
                            Tag="l95xxStored">

                            <ListBox.Style>
                                <Style BasedOn="{StaticResource MahApps.Styles.ListBox}" TargetType="ListBox">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding L95xxFocusedStoredSector, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>

                            <ListBox.ItemContainerStyle>
                                <Style BasedOn="{StaticResource MahApps.Styles.ListBoxItem}" TargetType="ListBoxItem">
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="2" />
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <WrapPanel.Style>
                                            <Style TargetType="WrapPanel">
                                                <Setter Property="ItemWidth" Value="200" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="400">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="300">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="200">
                                                        <Setter Property="MaxWidth" Value="200" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="100">
                                                        <Setter Property="MaxWidth" Value="200" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DualSectorColumns}" Value="True">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </WrapPanel.Style>
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <sectors:Sector
                                        Background="{DynamicResource AccentColorBrush}"
                                        MouseEnter="storedSectorMouseEnter"
                                        MouseLeave="storedSectorMouseLeave" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>

                        </ListBox>

                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding L95xxFocusedStoredSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>

                            <!--  Keep this Dockapnel. It is used for Saving and Coping the SectorDetails Visual.  -->
                            <DockPanel>
                                <sectors:SectorDetails DataContext="{Binding L95xxFocusedStoredSector}">
                                    <sectors:SectorDetails.Style>
                                        <Style TargetType="sectors:SectorDetails">
                                            <Setter Property="Width" Value="200" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.ImagesMaxHeight, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="400">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding DataContext.ImagesMaxHeight, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="300">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding DataContext.DualSectorColumns, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="True">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </sectors:SectorDetails.Style>
                                </sectors:SectorDetails>
                            </DockPanel>
                        </DockPanel>
                    </DockPanel>
                </ScrollViewer>
            </DockPanel>

        </DockPanel>

        <!--  Details  -->
        <ContentControl Content="{Binding L95xxStoredImage, Mode=OneWay}" ContentTemplate="{StaticResource imageDetailsTemplate}">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding L95xxStoredImage, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

        <!--  Current  -->
        <DockPanel>

            <!--  L95xx Current Image  -->
            <DockPanel Margin="3,0" DockPanel.Dock="Top">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding L95xxCurrentImage, Mode=OneWay, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <md:Card
                    Margin="3,3,0,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                    DockPanel.Dock="Top"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                    <DockPanel>

                        <!--  Title  -->
                        <md:Card
                            Margin="3"
                            Padding="4,1"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource L95xx_Brush}">
                            <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Current Image" />
                        </md:Card>

                        <ContentControl Content="{StaticResource L96Current_Toolbar}" Tag="Image" />

                    </DockPanel>

                </md:Card>

                <DockPanel
                    Margin="3"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Top"
                    Background="Black">

                    <Grid
                        MaxWidth="{Binding ImagesMaxHeight}"
                        MaxHeight="{Binding ImagesMaxHeight}"
                        Margin="3"
                        MouseDown="L95xxCurrentImage_MouseDown">

                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{Binding L95xxCurrentImage.ImageLow, Mode=OneWay}" />

                        <Image RenderOptions.BitmapScalingMode="NearestNeighbor" Source="{Binding L95xxCurrentImageOverlay, Mode=OneWay}" />
                    </Grid>

                </DockPanel>

            </DockPanel>

            <!--  L95xx Current Sectors  -->
            <DockPanel HorizontalAlignment="Left">
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding L95xxCurrentSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <md:Card
                    Margin="3,3,0,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                    DockPanel.Dock="Top"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                    <StackPanel>
                        <DockPanel>

                            <!--  Title  -->
                            <md:Card
                                Margin="3"
                                Padding="4,1"
                                HorizontalAlignment="Left"
                                Background="{DynamicResource L95xx_Brush}">
                                <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Current Sectors" />
                            </md:Card>

                            <ContentControl Content="{StaticResource L96Current_Toolbar}" Tag="Sectors" />

                        </DockPanel>


                        <TextBlock
                            Margin="10,0,0,0"
                            HorizontalAlignment="Left"
                            Style="{StaticResource MahApps.Styles.TextBlock.AutoCollapsing}"
                            Text="{Binding L95xxCurrentSectors[0].Version}" />
                    </StackPanel>
                </md:Card>

                <DockPanel
                    HorizontalAlignment="Right"
                    VerticalAlignment="Top"
                    DockPanel.Dock="Top">
                    <DockPanel.Style>
                        <Style TargetType="DockPanel">
                            <Setter Property="Visibility" Value="Visible" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding L95xxFocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DockPanel.Style>

                    <md:Card
                        Margin="0,0,0,3"
                        HorizontalAlignment="Right"
                        Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                        DockPanel.Dock="Top"
                        Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                        <DockPanel>

                            <DockPanel Height="26.62" />

                            <Button
                                Width="28"
                                Click="btnSaveImage_Click"
                                Content="{iconPacks:Material Kind=ContentSave}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Save as image." />

                            <Button
                                Width="28"
                                Click="btnCopyImage_Click"
                                Content="{iconPacks:MaterialDesign Kind=Image}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Copy image to clipboard as PNG." />

                            <Button
                                Width="28"
                                Command="{Binding L95xxFocusedCurrentSector.CopyToClipBoardCommand}"
                                CommandParameter="{Binding SourceImage.Order}"
                                Content="{iconPacks:Material Kind=ContentCopy}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Copy sector to CSV." />

                            <Button
                                Width="28"
                                Click="btnCloseDetails_Click"
                                Content="{iconPacks:MaterialDesign Kind=Close}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                Tag="l95xxCurrent"
                                ToolTip="Close this." />

                        </DockPanel>
                    </md:Card>
                </DockPanel>

                <ScrollViewer
                    x:Name="ScrollL95xxCurrentSectors"
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    ScrollChanged="ScrollL95xxCurrentSectors_ScrollChanged"
                    VerticalScrollBarVisibility="Auto">
                    <Grid>

                        <ListBox
                            Padding="0,1,0,0"
                            ItemsSource="{Binding L95xxCurrentSectors}"
                            SelectedItem="{Binding L95xxCurrentSectorSelected}"
                            Tag="l95xxCurrent">

                            <ListBox.Style>
                                <Style BasedOn="{StaticResource MahApps.Styles.ListBox}" TargetType="ListBox">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding L95xxFocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </ListBox.Style>

                            <ListBox.ItemContainerStyle>
                                <Style BasedOn="{StaticResource MahApps.Styles.ListBoxItem}" TargetType="ListBoxItem">
                                    <Setter Property="VerticalContentAlignment" Value="Stretch" />
                                    <Setter Property="Padding" Value="2" />
                                </Style>
                            </ListBox.ItemContainerStyle>

                            <ListBox.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <WrapPanel HorizontalAlignment="Left" Orientation="Horizontal">
                                        <WrapPanel.Style>
                                            <Style TargetType="WrapPanel">
                                                <Setter Property="ItemWidth" Value="200" />
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="400">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="300">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="200">
                                                        <Setter Property="MaxWidth" Value="200" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding ImagesMaxHeight}" Value="100">
                                                        <Setter Property="MaxWidth" Value="200" />
                                                    </DataTrigger>
                                                    <DataTrigger Binding="{Binding DualSectorColumns}" Value="True">
                                                        <Setter Property="MaxWidth" Value="400" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </WrapPanel.Style>
                                    </WrapPanel>
                                </ItemsPanelTemplate>
                            </ListBox.ItemsPanel>

                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <sectors:Sector
                                        Background="{DynamicResource AccentColorBrush}"
                                        MouseEnter="storedSectorMouseEnter"
                                        MouseLeave="storedSectorMouseLeave" />
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>

                        <DockPanel HorizontalAlignment="Center" VerticalAlignment="Top">
                            <DockPanel.Style>
                                <Style TargetType="DockPanel">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding L95xxFocusedCurrentSector, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </DockPanel.Style>
                            <!--  Keep this Dockapnel. It is used for Saving and Coping the SectorDetails Visual.  -->
                            <DockPanel>
                                <sectors:SectorDetails DataContext="{Binding L95xxFocusedCurrentSector}">
                                    <sectors:SectorDetails.Style>
                                        <Style TargetType="sectors:SectorDetails">
                                            <Setter Property="Width" Value="200" />
                                            <Style.Triggers>
                                                <DataTrigger Binding="{Binding DataContext.ImagesMaxHeight, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="400">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding DataContext.ImagesMaxHeight, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="300">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>

                                                <DataTrigger Binding="{Binding DataContext.DualSectorColumns, RelativeSource={RelativeSource AncestorType=DockPanel}}" Value="True">
                                                    <Setter Property="MaxWidth" Value="400" />
                                                    <Setter Property="Width" Value="auto" />
                                                </DataTrigger>
                                            </Style.Triggers>
                                        </Style>
                                    </sectors:SectorDetails.Style>
                                </sectors:SectorDetails>
                            </DockPanel>
                        </DockPanel>
                    </Grid>
                </ScrollViewer>
            </DockPanel>

            <!--  L95xx Dissimilar Results  -->
            <DockPanel>
                <DockPanel.Style>
                    <Style TargetType="{x:Type DockPanel}">
                        <Setter Property="Visibility" Value="Collapsed" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding L95xxDiffSectors.Count, Converter={StaticResource NumberZeroOrNull}}" Value="False">
                                <Setter Property="Visibility" Value="Visible" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <md:Card
                    Margin="3,3,0,0"
                    HorizontalAlignment="Left"
                    Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                    DockPanel.Dock="Top"
                    Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                    <DockPanel>

                        <!--  Title  -->
                        <md:Card
                            Margin="3"
                            Padding="4,1"
                            HorizontalAlignment="Left"
                            Background="{DynamicResource L95xx_Brush}">
                            <TextBlock FontSize="{DynamicResource MahApps.Font.Size.ContextMenu}" Text="Dissimilar Results" />
                        </md:Card>

                        <Border Margin="3,0" Style="{StaticResource imageBar}" />

                    </DockPanel>
                </md:Card>

                <ScrollViewer
                    Margin="3"
                    mah:ScrollViewerHelper.BubbleUpScrollEventToParentScrollviewer="True"
                    VerticalScrollBarVisibility="Auto">

                    <ListView
                        Padding="0,1,0,0"
                        ItemsSource="{Binding L95xxDiffSectors}"
                        Style="{StaticResource MahApps.Styles.ListView}">

                        <ListView.ItemContainerStyle>
                            <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem">
                                <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                            </Style>
                        </ListView.ItemContainerStyle>

                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <sectors:SectorDifferences
                                    Width="220"
                                    Margin="6,0"
                                    Background="{StaticResource AccentColorBrush}"
                                    MouseDown="lstDissimilarSector_Click" />
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </ScrollViewer>

            </DockPanel>

        </DockPanel>

        <!--  Details  -->
        <ContentControl Content="{Binding L95xxCurrentImage, Mode=OneWay}" ContentTemplate="{StaticResource imageDetailsTemplate}">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="Visibility" Value="Collapsed" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding L95xxCurrentImage, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                            <Setter Property="Visibility" Value="Visible" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>

    </DockPanel>
</UserControl>
