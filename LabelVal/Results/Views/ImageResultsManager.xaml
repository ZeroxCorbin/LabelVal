                        Height="36"
                        Margin="3"
                        HorizontalAlignment="Center"
                        Kind="Film" />

                    <Border Style="{StaticResource imageBar}" />

                    <DockPanel>

                        <!--  Image Roll Header  -->
                        <DockPanel DockPanel.Dock="Top">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
