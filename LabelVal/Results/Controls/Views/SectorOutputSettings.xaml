<UserControl
    x:Class="LabelVal.Results.Controls.Views.SectorOutputSettings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:LabelVal.Results.Controls.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:sectorOutput="clr-namespace:LabelVal.Results.Controls.ViewModels"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <UserControl.Resources />


    <UniformGrid Columns="3">

        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignTitleMediumTextBlock}" Text="Format" />
            <ListBox ItemsSource="{Binding Source={StaticResource SectorOutputType}}" SelectedItem="{Binding OutputType}" />
        </StackPanel>

        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignTitleMediumTextBlock}" Text="Parameters" />
            <ListBox ItemsSource="{Binding Source={StaticResource SectorOutputIncludeParameters}}" SelectedItem="{Binding IncludeParameters}" />
        </StackPanel>

        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="IsEnabled" Value="False" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OutputType}" Value="{x:Static sectorOutput:SectorOutputType.Delimited}">
                            <Setter Property="IsEnabled" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Style="{StaticResource MaterialDesignTitleMediumTextBlock}" Text="Delimiter" />
            <ListBox ItemsSource="{Binding Source={StaticResource SectorOutputDelimiter}}" SelectedItem="{Binding Delimiter}" />
        </StackPanel>

        <StackPanel>
            <StackPanel.Style>
                <Style TargetType="StackPanel">
                    <Setter Property="IsEnabled" Value="False" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding OutputType}" Value="{x:Static sectorOutput:SectorOutputType.Delimited}">
                            <Setter Property="IsEnabled" Value="True" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </StackPanel.Style>

            <TextBlock Style="{StaticResource MaterialDesignTitleMediumTextBlock}" Text="Add Quotes" />
            <ListBox ItemsSource="{Binding Source={StaticResource SectorOutputStringQuote}}" SelectedItem="{Binding StringQuote}" />
        </StackPanel>

    </UniformGrid>
</UserControl>
