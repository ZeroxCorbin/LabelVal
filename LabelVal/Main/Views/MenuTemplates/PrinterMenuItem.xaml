<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:printer="clr-namespace:LabelVal.Printer.Views">

    <!--  Printer Menu  -->
    <DataTemplate x:Key="PrinterMenuItem">
        <DockPanel MinHeight="48">

            <DockPanel Width="48">
                <iconPacks:PackIconMaterial
                    Width="36"
                    Height="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Kind="Printer" />
            </DockPanel>

            <Border Style="{StaticResource imageBar}" />

            <DockPanel>
                <DockPanel.Style>
                    <Style TargetType="DockPanel">
                        <Setter Property="Visibility" Value="Visible" />
                        <Setter Property="TextElement.Foreground" Value="{DynamicResource MahApps.Brushes.Text}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsPaneOpen, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <printer:Printer DataContext="{Binding Content}" />
            </DockPanel>


        </DockPanel>
    </DataTemplate>

</ResourceDictionary>