<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:converters="clr-namespace:Wpf.lib.Converters;assembly=Wpf.lib"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:v275="clr-namespace:LabelVal.V275.Views">

    <ResourceDictionary.MergedDictionaries>
        <!--  Bring in the shared toolbar template  -->
        <ResourceDictionary Source="pack://application:,,,/LabelVal;component/V275/Views/Templates/V275NodeToolbar.xaml" />
    </ResourceDictionary.MergedDictionaries>

    <converters:IsNullOrEmpty x:Key="IsNullOrEmpty" />

    <!--  V275  -->
    <DataTemplate x:Key="V275MenuItem">
        <DockPanel DataContext="{Binding Content}">

            <Grid Width="48" MinHeight="82">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.Background>
                    <LinearGradientBrush StartPoint="0,0.4" EndPoint="1,1">
                        <GradientStop Offset="0" Color="{DynamicResource V275_Color_Active50}" />
                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                    </LinearGradientBrush>
                </Grid.Background>

                <Image
                    Grid.Row="0"
                    Width="36"
                    Height="36"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Source="/Assets/Images/v275-white-outline.ico" />

                <!--  Show only when HamburgerMenu is collapsed (IsPaneOpen = False) and there is a SelectedDevice  -->
                <ContentControl
                    Grid.Row="1"
                    Margin="0,4,0,4"
                    HorizontalAlignment="Center"
                    Content="{Binding}"
                    ContentTemplate="{StaticResource V275NodeToolbarTemplate}"
                    DataContext="{Binding SelectedDevice}">
                    <ContentControl.Style>
                        <Style TargetType="ContentControl">
                            <!--  Default hidden  -->
                            <Setter Property="Visibility" Value="Collapsed" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedDevice, RelativeSource={RelativeSource AncestorType=DockPanel}, Converter={StaticResource IsNullOrEmpty}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <!--  Show when pane is collapsed  -->
                                <DataTrigger Binding="{Binding IsPaneOpen, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" Value="False">
                                    <Setter Property="Visibility" Value="Visible" />
                                </DataTrigger>
                                <!--  Hide if no SelectedDevice  -->
                                <DataTrigger Binding="{Binding DataContext, RelativeSource={RelativeSource Self}, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                    <Setter Property="Visibility" Value="Collapsed" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </Grid>

            <Border Style="{StaticResource imageBar}" />

            <DockPanel>
                <DockPanel.Style>
                    <Style TargetType="DockPanel">
                        <Setter Property="Visibility" Value="Visible" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding SelectedDevice, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding IsPaneOpen, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" Value="False">
                                <Setter Property="Visibility" Value="Collapsed" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </DockPanel.Style>

                <v275:NodeItem DataContext="{Binding SelectedDevice}" IsDocked="True" />
            </DockPanel>
        </DockPanel>
    </DataTemplate>
</ResourceDictionary>