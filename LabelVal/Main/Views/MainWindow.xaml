                            <mah:HamburgerMenu.ContentTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding DataContext.SelectedMenuItem.Content, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" ContentTemplateSelector="{StaticResource contentItemTemplateSelector}">
                                        <!--<ContentControl.Style>
                                            <Style TargetType="ContentControl">
                                                <Style.Triggers>
                                                    <DataTrigger Binding="{Binding DataContext.SelectedMenuItem, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                        <Setter Property="Visibility" Value="Collapsed" />
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </ContentControl.Style>-->
                                    </ContentControl>
                                </DataTemplate>
                            </mah:HamburgerMenu.ContentTemplate>
                        </mah:HamburgerMenu>

                        <DockPanel>

                            <!--<ContentControl Content="{Binding Source=imageRollsContent}" />-->

                            <results:ImageResultsManager DataContext="{Binding ImageResults}">
                                <results:ImageResultsManager.Style>
                                    <Style TargetType="results:ImageResultsManager">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedImageRoll, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </results:ImageResultsManager.Style>
                            </results:ImageResultsManager>

                        </DockPanel>
                    </DockPanel>
                </md:DrawerHost>
            </md:DrawerHost>
        </md:DrawerHost>
    </DockPanel>
</mah:MetroWindow>
