<mah:MetroWindow
    x:Class="LabelVal.Main.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:bar="clr-namespace:BarcodeBuilder.lib.Wpf.Views;assembly=BarcodeBuilder.lib.Wpf"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:imageRolls="clr-namespace:LabelVal.ImageRolls.Views"
    xmlns:local="clr-namespace:LabelVal.Main.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:printer="clr-namespace:LabelVal.Printer.Views"
    xmlns:printerConverters="clr-namespace:LabelVal.Printer.Converters"
    xmlns:results="clr-namespace:LabelVal.Results.Views"
    xmlns:run="clr-namespace:LabelVal.Run.Views"
    xmlns:sectorOutput="clr-namespace:LabelVal.Sectors.Views"
    xmlns:sectors="clr-namespace:LabelVal.Sectors.Views"
    xmlns:viewModels="clr-namespace:LabelVal.Main.ViewModels"
    Title="{Binding ApplicationTitle}"
    Width="auto"
    Height="auto"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindow}"
    Closing="MetroWindow_Closing"
    Icon="/favicon.ico"
    SaveWindowPosition="True"
    mc:Ignorable="d">

    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image
                Width="24"
                Height="24"
                Margin="4,0,0,0"
                Source="{Binding}" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>

    <mah:MetroWindow.DataContext>
        <viewModels:MainWindow />
    </mah:MetroWindow.DataContext>

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HamburgerMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <printerConverters:PrinterSettingThousandthsToInches x:Key="printerSettingThousandthsToInches" />


            <DataTemplate x:Key="ImageRollEntryEditTemplate">
                <ToggleButton
                    Width="48"
                    Height="48"
                    IsChecked="{Binding DataContext.AppSettings.ShowMainMenu, Mode=OneWay, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}"
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
            </DataTemplate>
        </ResourceDictionary>


    </mah:MetroWindow.Resources>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button
                x:Name="btnColorBlind"
                BorderThickness="0"
                Click="btnColorBlind_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="Eye" />
            </Button>

            <Button
                x:Name="btnLightTheme"
                BorderThickness="0"
                Click="btnLightTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="WeatherSun" />
            </Button>

            <Button
                x:Name="btnDarkTheme"
                BorderThickness="0"
                Click="btnDarkTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="MoonWaningCrescent" />
            </Button>

            <Button
                x:Name="btnSyncOSTheme"
                BorderThickness="0"
                Click="btnSyncOSTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="OsWindows" />
            </Button>

            <ComboBox
                BorderThickness="0"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding SelectedLanguage}" />
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Name="btnShowSettings" Click="btnShowSettings_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="Cog" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="ApplicationSettings" Position="Left">
                <mah:Flyout.Header>

                    <StackPanel>
                        <Image Width="200" Source="/Assets/Images/label-val-logo.png" />
                        <StackPanel Margin="0,0,0,10" VerticalAlignment="Bottom">

                            <TextBlock
                                Margin="0,2,0,0"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                Text="For Internal Use Only! (Confidential B)" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                Text="Copyright &#169; Omron 2015" />
                        </StackPanel>
                    </StackPanel>

                </mah:Flyout.Header>

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <ScrollViewer Grid.Column="0">
                        <StackPanel Margin="10">
                            <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Compare Settings" />
                            <sectors:SectorDifferencesDatabaseSettingsView Margin="3" />
                        </StackPanel>
                    </ScrollViewer>

                    <ScrollViewer Grid.Column="1">
                        <StackPanel Margin="10">
                            <TextBlock Style="{StaticResource MaterialDesignTitleLargeTextBlock}" Text="Focused Parameters" />

                            <bar:EnumBrowserView Margin="3" DataContext="{Binding EnumBrowserViewModel}" />
                        </StackPanel>
                    </ScrollViewer>


                    <ScrollViewer Grid.Column="2">
                        <StackPanel Margin="10">
                            <StackPanel Margin="3">
                                <TextBlock Style="{StaticResource MaterialDesignTitleLargeTextBlock}" Text="UI Settings" />
                                <local:AppSettingsControlView DataContext="{Binding AppSettings}" />
                            </StackPanel>

                            <StackPanel Margin="10">
                                <TextBlock Style="{StaticResource MaterialDesignTitleLargeTextBlock}" Text="Sector Output Settings" />
                                <sectorOutput:SectorOutputSettings Margin="3" DataContext="{Binding SectorOutputSettings}" />
                            </StackPanel>
                        </StackPanel>
                    </ScrollViewer>

                </Grid>
            </mah:Flyout>

        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <DockPanel>

        <md:DrawerHost
            x:Name="NodeDetails"
            VerticalAlignment="Stretch"
            OpenMode="Standard">
            <md:DrawerHost
                x:Name="PrinterDetails"
                VerticalAlignment="Stretch"
                OpenMode="Standard">
                <md:DrawerHost
                    x:Name="ScannerDetails"
                    VerticalAlignment="Stretch"
                    OpenMode="Standard">
                    <DockPanel>

                        <DockPanel DockPanel.Dock="Bottom">
                            <local:LoggingStatusBar DataContext="{Binding LoggingStatusBarVm}" />
                        </DockPanel>

                        <mah:HamburgerMenu
                            x:Name="hamMenu"
                            DockPanel.Dock="Left"
                            HamburgerButtonTemplate="{StaticResource ImageRollEntryEditTemplate}"
                            IsPaneOpen="{Binding AppSettings.ShowMainMenu}"
                            ItemClick="hamMenu_ItemClick"
                            ItemTemplateSelector="{StaticResource MenuItemTemplateSelector}"
                            ItemsSource="{Binding MenuItems}"
                            LayoutUpdated="hamMenu_LayoutUpdated"
                            SelectedItem="{Binding SelectedMenuItem}">

                            <mah:HamburgerMenu.ContentTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding DataContext.SelectedMenuItem.Content, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" ContentTemplateSelector="{StaticResource ContentItemTemplateSelector}" />
                                </DataTemplate>
                            </mah:HamburgerMenu.ContentTemplate>
                        </mah:HamburgerMenu>

                        <DockPanel>
                            <results:ImageResultsManager DataContext="{Binding ImageResultsManager}">
                                <results:ImageResultsManager.Style>
                                    <Style TargetType="results:ImageResultsManager">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding SelectedImageRoll, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </results:ImageResultsManager.Style>
                            </results:ImageResultsManager>
                        </DockPanel>
                    </DockPanel>
                </md:DrawerHost>
            </md:DrawerHost>
        </md:DrawerHost>
    </DockPanel>
</mah:MetroWindow>
