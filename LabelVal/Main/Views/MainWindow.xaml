<mah:MetroWindow
    x:Class="LabelVal.Main.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:bar="clr-namespace:BarcodeBuilder.lib.Wpf.Views;assembly=BarcodeBuilder.lib.Wpf"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:dialogs="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:imageRolls="clr-namespace:LabelVal.ImageRolls.Views"
    xmlns:local="clr-namespace:LabelVal.Main.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:printer="clr-namespace:LabelVal.Printer.Views"
    xmlns:printerConverters="clr-namespace:LabelVal.Printer.Converters"
    xmlns:results="clr-namespace:LabelVal.Results.Views"
    xmlns:run="clr-namespace:LabelVal.Run.Views"
    xmlns:loggingWpf="clr-namespace:Logging.lib.Wpf.Views;assembly=Logging.lib.Wpf"
    xmlns:sectorOutput="clr-namespace:LabelVal.Sectors.Views"
    xmlns:sectors="clr-namespace:LabelVal.Sectors.Views"
    xmlns:theme="clr-namespace:LabelVal.Theme"
    xmlns:viewModels="clr-namespace:LabelVal.Main.ViewModels"
    Title="{Binding ApplicationTitle}"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindow}"
    dialogs:DialogParticipation.Register="{Binding}"
    Closing="MetroWindow_Closing"
    Icon="/favicon.ico"
    SaveWindowPosition="True"
    mc:Ignorable="d">

    <mah:MetroWindow.IconTemplate>
        <DataTemplate>
            <Image
                Width="24"
                Height="24"
                Margin="4,0,0,0"
                Source="{Binding}" />
        </DataTemplate>
    </mah:MetroWindow.IconTemplate>

    <mah:MetroWindow.DataContext>
        <viewModels:MainWindow />
    </mah:MetroWindow.DataContext>

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HamburgerMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <printerConverters:PrinterSettingThousandthsToInches x:Key="printerSettingThousandthsToInches" />


            <DataTemplate x:Key="ImageRollEntryEditTemplate">
                <ToggleButton
                    Width="48"
                    Height="48"
                    IsChecked="{Binding DataContext.AppSettings.ShowMainMenu, Mode=OneWay, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}"
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
            </DataTemplate>

            <DataTemplate x:Key="HamburgerHeader">
                <StackPanel>
                    <Image
                        Width="120"
                        Margin="0,3,3,3"
                        Source="/Assets/Images/label-val-logo.png" />
                    <!--<StackPanel Margin="0,0,0,10" VerticalAlignment="Bottom">

                        <TextBlock
                            Margin="0,2,0,0"
                            HorizontalAlignment="Center"
                            FontSize="10"
                            FontWeight="SemiBold"
                            Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                            Text="For Internal Use Only! (Confidential B)" />
                        <TextBlock
                            HorizontalAlignment="Center"
                            FontSize="10"
                            Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                            Text="Copyright &#169; Omron 2015" />
                    </StackPanel>-->
                </StackPanel>
            </DataTemplate>

        </ResourceDictionary>

    </mah:MetroWindow.Resources>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>

            <DockPanel>
                <TextBlock
                    Margin="3,0"
                    VerticalAlignment="Center"
                    Text="{Binding ColorBlindnessType, Converter={StaticResource EnumValueToDescription}}" />

                <Button
                    x:Name="btnColorBlind"
                    BorderThickness="0"
                    Click="btnColorBlind_Click">
                    <iconPacks:PackIconModern
                        Width="20"
                        Height="20"
                        Kind="Eye" />
                </Button>
            </DockPanel>


            <Button
                x:Name="btnLightTheme"
                BorderThickness="0"
                Click="btnLightTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="WeatherSun" />
            </Button>

            <Button
                x:Name="btnDarkTheme"
                BorderThickness="0"
                Click="btnDarkTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="MoonWaningCrescent" />
            </Button>

            <Button
                x:Name="btnSyncOSTheme"
                BorderThickness="0"
                Click="btnSyncOSTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="OsWindows" />
            </Button>

            <ComboBox
                Width="150"
                Margin="4,0"
                ItemsSource="{Binding AvailableThemes}"
                SelectedItem="{Binding SelectedTheme}"
                ToolTip="Select theme (first item = follow OS)">
                <ComboBox.ItemTemplate>
                    <DataTemplate>
                        <TextBlock>
                            <TextBlock.Text>
                                <MultiBinding StringFormat="{}{0}">
                                    <Binding />
                                </MultiBinding>
                            </TextBlock.Text>
                        </TextBlock>
                    </DataTemplate>
                </ComboBox.ItemTemplate>
            </ComboBox>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Name="btnShowSettings" Click="btnShowSettings_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="Cog" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="ApplicationSettings" Position="Left">
                <mah:Flyout.Resources>
                    <SolidColorBrush x:Key="MyFlyoutForegroundBrush" Color="#FFD8D8D8" />
                </mah:Flyout.Resources>
                <mah:Flyout.Header>

                    <StackPanel>
                        <Image Width="200" Source="/Assets/Images/label-val-logo.png" />
                        <StackPanel Margin="0,0,0,10" VerticalAlignment="Bottom">

                            <TextBlock
                                Margin="0,2,0,0"
                                HorizontalAlignment="Center"
                                FontSize="10"
                                FontWeight="SemiBold"
                                Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                Text="For Internal Use Only! (Confidential B)" />
                            <TextBlock
                                HorizontalAlignment="Center"
                                FontSize="10"
                                Foreground="{DynamicResource MahApps.Brushes.Gray5}"
                                Text="Copyright &#169; Omron 2015" />
                        </StackPanel>
                    </StackPanel>

                </mah:Flyout.Header>

                <DockPanel>

                    <Grid Grid.Column="0" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource ImageRoll_Color_Active50}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>


                            <TextBlock
                                Margin="6,0,6,3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                Text="Compare Settings" />

                        </DockPanel>

                        <sectors:SectorDifferencesDatabaseSettingsView Grid.Row="1" />

                    </Grid>

                    <Grid Grid.Column="1" Margin="10">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto" />
                            <RowDefinition Height="*" />
                        </Grid.RowDefinitions>

                        <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                            <DockPanel.Background>
                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                    <GradientStop Offset="0" Color="{DynamicResource ImageRoll_Color_Active50}" />
                                    <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                </LinearGradientBrush>
                            </DockPanel.Background>


                            <TextBlock
                                Margin="6,0,6,3"
                                HorizontalAlignment="Stretch"
                                VerticalAlignment="Center"
                                DockPanel.Dock="Top"
                                Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                Text="Focused Parameters" />

                        </DockPanel>

                        <bar:EnumBrowserView Grid.Row="1" DataContext="{Binding EnumBrowserViewModel}" />

                    </Grid>

                    <StackPanel Grid.Row="0" Grid.Column="2">

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>


                            <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                                <DockPanel.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource ImageRoll_Color_Active50}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </DockPanel.Background>


                                <TextBlock
                                    Margin="6,0,6,3"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                    Text="Sector Copy Settings" />

                            </DockPanel>

                            <sectorOutput:SectorOutputSettings Grid.Row="1" DataContext="{Binding SectorOutputSettings}" />

                        </Grid>

                        <Grid Margin="10">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <DockPanel HorizontalAlignment="Stretch" DockPanel.Dock="Top">
                                <DockPanel.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource AppSecondary_Color_Active}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </DockPanel.Background>


                                <TextBlock
                                    Margin="6,0,6,3"
                                    HorizontalAlignment="Stretch"
                                    VerticalAlignment="Center"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                    Text="Global Settings" />

                            </DockPanel>

                            <local:AppSettingsControlView Grid.Row="1" DataContext="{Binding AppSettings}" />

                        </Grid>

                    </StackPanel>

                </DockPanel>
            </mah:Flyout>

        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <DockPanel>

        <md:DrawerHost
            x:Name="NodeDetails"
            VerticalAlignment="Stretch"
            OpenMode="Standard">
            <md:DrawerHost
                x:Name="PrinterDetails"
                VerticalAlignment="Stretch"
                OpenMode="Standard">
                <md:DrawerHost
                    x:Name="ScannerDetails"
                    VerticalAlignment="Stretch"
                    OpenMode="Standard">
                    <DockPanel>

                        <DockPanel DockPanel.Dock="Bottom">
                            <loggingWpf:LoggingStatusBar DataContext="{Binding LoggingStatusBarVm}" />
                        </DockPanel>

                        <mah:HamburgerMenu
                            x:Name="hamMenu"
                            DockPanel.Dock="Left"
                            HamburgerButtonTemplate="{StaticResource ImageRollEntryEditTemplate}"
                            IsPaneOpen="{Binding AppSettings.ShowMainMenu}"
                            ItemClick="hamMenu_ItemClick"
                            ItemTemplateSelector="{StaticResource MenuItemTemplateSelector}"
                            ItemsSource="{Binding MenuItems}"
                            LayoutUpdated="hamMenu_LayoutUpdated"
                            SelectedItem="{Binding SelectedMenuItem}">

                            <mah:HamburgerMenu.HamburgerMenuHeaderTemplate>
                                <DataTemplate>
                                    <ContentControl ContentTemplate="{StaticResource HamburgerHeader}" />
                                </DataTemplate>
                            </mah:HamburgerMenu.HamburgerMenuHeaderTemplate>

                            <mah:HamburgerMenu.ContentTemplate>
                                <DataTemplate>
                                    <ContentControl Content="{Binding DataContext.SelectedMenuItem.Content, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}" ContentTemplateSelector="{StaticResource ContentItemTemplateSelector}" />
                                </DataTemplate>
                            </mah:HamburgerMenu.ContentTemplate>
                        </mah:HamburgerMenu>

                        <DockPanel>
                            <results:ResultsManagerView DataContext="{Binding ResultsManagerView}">
                                <results:ResultsManagerView.Style>
                                    <Style TargetType="results:ResultsManagerView">
                                        <Style.Triggers>
                                            <DataTrigger Binding="{Binding ActiveImageRoll, Converter={StaticResource IsNullOrEmpty}}" Value="True">
                                                <Setter Property="Visibility" Value="Collapsed" />
                                            </DataTrigger>
                                        </Style.Triggers>
                                    </Style>
                                </results:ResultsManagerView.Style>
                            </results:ResultsManagerView>
                        </DockPanel>
                    </DockPanel>
                </md:DrawerHost>
            </md:DrawerHost>
        </md:DrawerHost>
    </DockPanel>
</mah:MetroWindow>
