<mah:MetroWindow
    x:Class="LabelVal.Main.Views.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Dialog="clr-namespace:MahApps.Metro.Controls.Dialogs;assembly=MahApps.Metro"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:imageRolls="clr-namespace:LabelVal.ImageRolls.Views"
    xmlns:local="clr-namespace:LabelVal.Main.Views"
    xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:printer="clr-namespace:LabelVal.Printer.Views"
    xmlns:printerConverters="clr-namespace:LabelVal.Printer.Converters"
    xmlns:results="clr-namespace:LabelVal.Results.Views"
    xmlns:run="clr-namespace:LabelVal.Run.Views"
    xmlns:sectorOutput="clr-namespace:LabelVal.Sectors.Views"
    xmlns:viewModels="clr-namespace:LabelVal.Main.ViewModels"
    Title="{Binding ApplicationTitle}"
    Width="auto"
    Height="auto"
    Dialog:DialogParticipation.Register="{Binding}"
    d:DataContext="{d:DesignInstance Type=viewModels:MainWindow}"
    Closing="MetroWindow_Closing"
    SaveWindowPosition="True"
    mc:Ignorable="d">

    <mah:MetroWindow.DataContext>
        <viewModels:MainWindow />
    </mah:MetroWindow.DataContext>

    <mah:MetroWindow.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="HamburgerMenu.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <printerConverters:PrinterSettingThousandthsToInches x:Key="printerSettingThousandthsToInches" />


            <DataTemplate x:Key="ImageRollEntryEditTemplate">
                <ToggleButton
                    Width="48"
                    Height="48"
                    IsChecked="{Binding DataContext.AppSettings.ShowMainMenu, Mode=OneWay, RelativeSource={RelativeSource AncestorType=mah:HamburgerMenu}}"
                    Style="{StaticResource MaterialDesignHamburgerToggleButton}" />
            </DataTemplate>
        </ResourceDictionary>


    </mah:MetroWindow.Resources>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            >
            <Button
                x:Name="btnColorBlind"
                BorderThickness="0"
                Click="btnColorBlind_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="Eye" />
            </Button>

            <Button
                x:Name="btnLightTheme"
                BorderThickness="0"
                Click="btnLightTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="WeatherSun" />
            </Button>

            <Button
                x:Name="btnDarkTheme"
                BorderThickness="0"
                Click="btnDarkTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="MoonWaningCrescent" />
            </Button>

            <Button
                x:Name="btnSyncOSTheme"
                BorderThickness="0"
                Click="btnSyncOSTheme_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="OsWindows" />
            </Button>

            <ComboBox
                BorderThickness="0"
                ItemsSource="{Binding Languages}"
                SelectedValue="{Binding SelectedLanguage}" />
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>

    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button Name="btnShowSettings" Click="btnShowSettings_Click">
                <iconPacks:PackIconModern
                    Width="20"
                    Height="20"
                    Kind="Cog" />
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.Flyouts>
        <mah:FlyoutsControl>
            <mah:Flyout x:Name="ApplicationSettings" Position="Left">
                <StackPanel>

                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource MaterialDesignTitleLargeTextBlock}" Text="Sector Output Settings" />

                        <sectorOutput:SectorOutputSettings Margin="3" DataContext="{Binding SectorOutputSettings}" />
                    </StackPanel>

                    <StackPanel Margin="10">
                        <TextBlock Style="{StaticResource MaterialDesignHeadline5TextBlock}" Text="Compare Settings" />
                        <run:CompareSettingsView Margin="3" />
                    </StackPanel>

                    <StackPanel Margin="3">
                        <local:AppSettingsControlView DataContext="{Binding AppSettings}" />
                    </StackPanel>
                </StackPanel>

            </mah:Flyout>

        </mah:FlyoutsControl>
    </mah:MetroWindow.Flyouts>

    <DockPanel>

        <md:DrawerHost
            x:Name="NodeDetails"
            VerticalAlignment="Stretch"
            OpenMode="Standard">
            <md:DrawerHost
                x:Name="PrinterDetails"
                VerticalAlignment="Stretch"
                OpenMode="Standard">
                <md:DrawerHost
                    x:Name="ScannerDetails"
                    VerticalAlignment="Stretch"
                    OpenMode="Standard">
                    <DockPanel>

                        <DockPanel DockPanel.Dock="Bottom">
                            <local:LoggingStatusBar DataContext="{Binding LoggingStatusBarVm}" />
                        </DockPanel>

                        <mah:HamburgerMenu
                            x:Name="hamMenu"
                            DockPanel.Dock="Left"
                            HamburgerButtonTemplate="{StaticResource ImageRollEntryEditTemplate}"
                            IsPaneOpen="{Binding AppSettings.ShowMainMenu}"
                            ItemClick="hamMenu_ItemClick"
                            ItemTemplateSelector="{StaticResource menuItemTemplateSelector}"
                            ItemsSource="{Binding MenuItems}"
                            LayoutUpdated="hamMenu_LayoutUpdated"
                            SelectedItem="{Binding SelectedMenuItem}">

