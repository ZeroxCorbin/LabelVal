<UserControl
    x:Class="LabelVal.V5.Views.ScannerManager"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.V5.ViewModels"
    xmlns:converters="clr-namespace:LabelVal.Converters"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:local="clr-namespace:LabelVal.V5.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:ScannerManager}"
    mc:Ignorable="d">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Templates/SharedButtonStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

        <md:Card
            Margin="3,3,0,0"
            Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
            DockPanel.Dock="Top"
            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

            <DockPanel>

                <DockPanel Width="48" Background="{DynamicResource V5_Brush_Active}">
                    <Image
                        Width="36"
                        Height="36"
                        Margin="0,3"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Top"
                        Source="/Assets/Images/v5-white-outline.ico" />
                </DockPanel>

                <DockPanel>
                    <DockPanel
                        Height="32"
                        HorizontalAlignment="Stretch"
                        DockPanel.Dock="Top">

                        <DockPanel.Background>
                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                <GradientStop Offset="0" Color="{DynamicResource V5_Color_Active}" />
                                <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                            </LinearGradientBrush>
                        </DockPanel.Background>

                        <TextBlock
                            Margin="6,0,6,3"
                            VerticalAlignment="Center"
                            Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                            Text="V5 Cameras" />

                        <Button
                            Padding="8,0"
                            HorizontalAlignment="Right"
                            Click="btnCollapseContent"
                            Content="{iconPacks:Material Kind=ArrowCollapseLeft}"
                            Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                            Style="{StaticResource MahApps.Styles.Button.Hamburger}" />


                    </DockPanel>

                    <ToolBarTray>
                        <ToolBar Padding="0,3" ToolBarTray.IsLocked="True">

                            <Button
                                Command="{Binding AddCommand}"
                                Style="{StaticResource ToolBarButton}"
                                ToolTip="New V5">
                                <DockPanel>
                                    <TextBlock
                                        HorizontalAlignment="Center"
                                        DockPanel.Dock="Top"
                                        Text="Add"
                                        Visibility="{Binding AppSettings.ShowButtonText, Converter={StaticResource BooleanToVisibilityConverter}}" />

                                    <iconPacks:PackIconMaterial
                                        Width="24"
                                        Height="24"
                                        HorizontalAlignment="Center"
                                        VerticalAlignment="Center"
                                        Kind="Plus" />

                                </DockPanel>
                            </Button>

                            <!--<Button
                                Width="48"
                                HorizontalAlignment="Right"
                                Click="btnShowDetails_Click"
                                Content="{iconPacks:Material Kind=CodeJson,
                                                             Width=24,
                                                             Height=24}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}" />-->

                        </ToolBar>
                    </ToolBarTray>
                </DockPanel>
            </DockPanel>
        </md:Card>

        <DockPanel DockPanel.Dock="Top">
            <Border Background="{DynamicResource V5_Brush_Active}" Style="{StaticResource groupLeft}" />
            <Border Background="{DynamicResource V5_Brush_Active}" Style="{StaticResource groupBottom}" />

            <ListView
                Margin="3,3,0,0"
                ItemsSource="{Binding Devices}"
                SelectedItem="{Binding SelectedDevice}"
                Style="{StaticResource MahApps.Styles.ListView}">

                <ListView.ItemContainerStyle>
                    <Style BasedOn="{StaticResource MahApps.Styles.ListViewItem}" TargetType="ListViewItem" />
                </ListView.ItemContainerStyle>

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <local:Scanner DataContext="{Binding}" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </DockPanel>

    </DockPanel>
</UserControl>
