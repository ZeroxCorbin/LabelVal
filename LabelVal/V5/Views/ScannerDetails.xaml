<UserControl
    x:Class="LabelVal.V5.Views.ScannerDetails"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:ViewModels="clr-namespace:LabelVal.V5.ViewModels"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
    xmlns:json="clr-namespace:JSONViewer_WPF;assembly=JSONViewer_WPF"
    xmlns:local="clr-namespace:LabelVal.V5.Views"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
    d:DataContext="{d:DesignInstance Type=ViewModels:ScannerDetails}"
    mc:Ignorable="d">
    <ScrollViewer>

        <DockPanel Margin="3,3,0,0" VerticalAlignment="Top">

            <md:Card
                Height="48"
                Margin="3,3,0,0"
                Background="{DynamicResource MahApps.HamburgerMenu.Pane.Background}"
                DockPanel.Dock="Top"
                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}">

                <DockPanel>

                    <DockPanel Width="48" Background="{DynamicResource V5_Brush}">
                        <Image
                            Width="36"
                            Height="36"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Source="/Assets/Images/v5-white-outline.ico" />
                    </DockPanel>

                    <Border Style="{StaticResource imageBar}" />

                    <DockPanel>
                        <DockPanel VerticalAlignment="Top" DockPanel.Dock="Top">

                            <DockPanel HorizontalAlignment="Left">
                                <DockPanel.Background>
                                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                        <GradientStop Offset="0" Color="{DynamicResource MahApps.Colors.Accent3}" />
                                        <GradientStop Offset="1" Color="{DynamicResource MahApps.Colors.HamburgerMenu}" />
                                    </LinearGradientBrush>
                                </DockPanel.Background>

                                <TextBlock
                                    Margin="6,0,0,3"
                                    DockPanel.Dock="Top"
                                    Style="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}"
                                    Text="V5 Cameras" />

                                <Border Style="{StaticResource imageBarHor}" />
                            </DockPanel>

                            <Button
                                Padding="8,0"
                                HorizontalAlignment="Right"
                                Click="btnCloseDetails"
                                Content="{iconPacks:Material Kind=Close}"
                                Foreground="{DynamicResource MahApps.HamburgerMenu.Pane.Foreground}"
                                Style="{StaticResource MahApps.Styles.Button.Hamburger}"
                                ToolTip="Close" />

                        </DockPanel>

                        <DockPanel>
                            <TextBlock Margin="6,0,0,3" DockPanel.Dock="Top">
                                <TextBlock.Style>
                                    <Style BasedOn="{StaticResource MahApps.Styles.TextBlock.HamburgerMenuHeader}" TargetType="TextBlock">
                                        <Setter Property="Text">
                                            <Setter.Value>
                                                <MultiBinding StringFormat="{}{0}:{1}">
                                                    <Binding Path="SelectedScanner.MAC" />
                                                    <Binding Path="SystemPort" />
                                                </MultiBinding>

                                            </Setter.Value>
                                        </Setter>

                                    </Style>
                                </TextBlock.Style>
                            </TextBlock>
                        </DockPanel>
                    </DockPanel>
                </DockPanel>

            </md:Card>

            <StackPanel>
                <json:JsonViewer
                    Title="System Info"
                    ButtonStyle="{StaticResource MahApps.Styles.Button.Hamburger}"
                    JSON="{Binding SelectedScanner.Controller.SysInfoJSON}"
                    ShowSaveButton="True" />
                <json:JsonViewer
                    Title="Boot Config"
                    ButtonStyle="{StaticResource MahApps.Styles.Button.Hamburger}"
                    JSON="{Binding SelectedScanner.Controller.BootConfigJSON}"
                    ShowSaveButton="True" />
                <json:JsonViewer
                    Title="Config"
                    ButtonStyle="{StaticResource MahApps.Styles.Button.Hamburger}"
                    JSON="{Binding SelectedScanner.Controller.ConfigJSON}"
                    ShowSaveButton="True" />
            </StackPanel>

        </DockPanel>
    </ScrollViewer>
</UserControl>
